<% content_for :title, "Energy Yönetimi" %>

<div class="space-y-6">
  <!-- Header -->
  <div class="flex justify-between items-center">
    <div>
      <h1 class="text-2xl font-bold text-white">Energy Yönetimi</h1>
      <p class="text-gray-400 mt-1">Kullanıcı energy seviyelerini yönet ve istatistikleri görüntüle</p>
    </div>
    
    <div class="flex space-x-3">
      <%= link_to "Energy Maliyetleri", energy_costs_admin_energy_index_path, 
          class: "bg-purple-600 hover:bg-purple-700 text-white px-4 py-2 rounded-lg font-medium transition-colors" %>
      <%= button_to "Toplu Energy Restore", bulk_energy_restore_admin_energy_index_path, 
          method: :post,
          class: "bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg font-medium transition-colors",
          confirm: "Tüm kullanıcıların energy'sini restore etmek istediğinizden emin misiniz?" %>
    </div>
  </div>

  <!-- Energy Statistics -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-4">
    <div class="bg-gray-800 rounded-lg p-4 border border-gray-700">
      <div class="text-2xl font-bold text-white"><%= @total_users %></div>
      <div class="text-sm text-gray-400">Toplam Kullanıcı</div>
    </div>
    
    <div class="bg-gray-800 rounded-lg p-4 border border-gray-700">
      <div class="text-2xl font-bold text-blue-400"><%= @average_energy %></div>
      <div class="text-sm text-gray-400">Ortalama Energy</div>
    </div>
    
    <div class="bg-gray-800 rounded-lg p-4 border border-gray-700">
      <div class="text-2xl font-bold text-red-400"><%= @low_energy_users %></div>
      <div class="text-sm text-gray-400">Düşük Energy (&lt;20)</div>
    </div>
    
    <div class="bg-gray-800 rounded-lg p-4 border border-gray-700">
      <div class="text-2xl font-bold text-green-400"><%= @high_energy_users %></div>
      <div class="text-sm text-gray-400">Yüksek Energy (≥80)</div>
    </div>
    
    <div class="bg-gray-800 rounded-lg p-4 border border-gray-700">
      <div class="text-2xl font-bold text-yellow-400"><%= User.joins(:interaction_logs).where('fan_pulse_interaction_logs.created_at > ?', 24.hours.ago).distinct.count %></div>
      <div class="text-sm text-gray-400">Son 24s Aktivite</div>
    </div>
  </div>

  <!-- Users List -->
  <div class="bg-gray-800 rounded-lg border border-gray-700">
    <div class="px-6 py-4 border-b border-gray-700">
      <h2 class="text-lg font-semibold text-white">Kullanıcı Energy Durumu</h2>
    </div>
    
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-700">
        <thead class="bg-gray-900">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Kullanıcı</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Energy</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Energy Bar</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Son Aktivite</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">İşlemler</th>
          </tr>
        </thead>
        <tbody class="bg-gray-800 divide-y divide-gray-700">
          <% @users.each do |user| %>
            <tr class="hover:bg-gray-700">
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="flex items-center">
                  <div class="w-8 h-8 bg-gradient-to-r from-blue-500 to-purple-600 rounded-full flex items-center justify-center text-white font-bold text-sm mr-3">
                    <%= user.username.first.upcase %>
                  </div>
                  <div>
                    <div class="text-sm font-medium text-white">@<%= user.username %></div>
                    <div class="text-sm text-gray-400"><%= user.email_address %></div>
                  </div>
                </div>
              </td>
              
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="text-lg font-bold <%= user.energy < 20 ? 'text-red-400' : user.energy < 50 ? 'text-yellow-400' : 'text-green-400' %>">
                  <%= user.energy %>/100
                </span>
              </td>
              
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="w-32 bg-gray-700 rounded-full h-3">
                  <div class="h-3 rounded-full transition-all duration-300 <%= user.energy < 20 ? 'bg-red-500' : user.energy < 50 ? 'bg-yellow-500' : 'bg-green-500' %>" 
                       style="width: <%= user.energy %>%"></div>
                </div>
              </td>
              
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-400">
                <% last_log = user.interaction_logs.order(created_at: :desc).first %>
                <% if last_log %>
                  <%= time_ago_in_words(last_log.created_at) %> önce
                  <div class="text-xs text-gray-500"><%= last_log.action_type %></div>
                <% else %>
                  Aktivite yok
                <% end %>
              </td>
              
              <td class="px-6 py-4 whitespace-nowrap text-sm space-x-2">
                <%= link_to "Detay", admin_energy_path(user), 
                    class: "bg-blue-600 hover:bg-blue-700 text-white px-3 py-1 rounded text-xs font-medium transition-colors" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    
    <!-- Pagination would go here if using kaminari or similar -->
  </div>
</div>