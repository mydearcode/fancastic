<% content_for :title, "Energy Tüketim Ayarları" %>

<div class="space-y-6">
  <!-- Header -->
  <div class="flex justify-between items-center">
    <div>
      <h1 class="text-2xl font-bold text-white">Energy Tüketim Ayarları</h1>
      <p class="text-gray-400 mt-1">Aktivitelerin energy maliyetlerini yönetin</p>
    </div>
    
    <%= link_to "← Energy Yönetimi", admin_energy_index_path, 
        class: "bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded-lg font-medium transition-colors" %>
  </div>

  <!-- Current Energy Costs -->
  <div class="bg-gray-800 rounded-lg p-6 border border-gray-700">
    <h2 class="text-lg font-semibold text-white mb-4">Mevcut Energy Maliyetleri</h2>
    
    <%= form_with url: update_energy_costs_admin_energy_index_path, method: :patch, local: true, class: "space-y-6" do |form| %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        
        <!-- Post Actions -->
        <div class="bg-gray-900 rounded-lg p-4 border border-gray-600">
          <h3 class="font-medium text-blue-400 mb-4 flex items-center">
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M18 10c0 3.866-3.582 7-8 7a8.841 8.841 0 01-4.083-.98L2 17l1.338-3.123C2.493 12.767 2 11.434 2 10c0-3.866 3.582-7 8-7s8 3.134 8 7zM7 9H5v2h2V9zm8 0h-2v2h2V9zM9 9h2v2H9V9z" clip-rule="evenodd"></path>
            </svg>
            Post İşlemleri
          </h3>
          
          <div class="space-y-3">
            <div>
              <label class="block text-sm font-medium text-gray-300 mb-1">Post Oluşturma</label>
              <%= form.number_field "energy_costs[post]", 
                  value: EnergyCostSetting.cost_for('post') || 5, 
                  min: 0, max: 100,
                  class: "w-full px-3 py-2 bg-gray-800 border border-gray-600 rounded text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-300 mb-1">Post Silme</label>
              <%= form.number_field "energy_costs[delete_post]", 
                  value: EnergyCostSetting.cost_for('delete_post') || 0, 
                  min: 0, max: 100,
                  class: "w-full px-3 py-2 bg-gray-800 border border-gray-600 rounded text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
            </div>
          </div>
        </div>

        <!-- Interaction Actions -->
        <div class="bg-gray-900 rounded-lg p-4 border border-gray-600">
          <h3 class="font-medium text-red-400 mb-4 flex items-center">
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd"></path>
            </svg>
            Etkileşim İşlemleri
          </h3>
          
          <div class="space-y-3">
            <div>
              <label class="block text-sm font-medium text-gray-300 mb-1">Like</label>
              <%= form.number_field "energy_costs[like]", 
                  value: EnergyCostSetting.cost_for('like') || 1, 
                  min: 0, max: 100,
                  class: "w-full px-3 py-2 bg-gray-800 border border-gray-600 rounded text-white focus:ring-2 focus:ring-red-500 focus:border-transparent" %>
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-300 mb-1">Unlike</label>
              <%= form.number_field "energy_costs[unlike]", 
                  value: EnergyCostSetting.cost_for('unlike') || 0, 
                  min: 0, max: 100,
                  class: "w-full px-3 py-2 bg-gray-800 border border-gray-600 rounded text-white focus:ring-2 focus:ring-red-500 focus:border-transparent" %>
            </div>
          </div>
        </div>

        <!-- Retweet Actions -->
        <div class="bg-gray-900 rounded-lg p-4 border border-gray-600">
          <h3 class="font-medium text-green-400 mb-4 flex items-center">
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path d="M5 4a2 2 0 012-2h6a2 2 0 012 2v14l-5-2.5L5 18V4z"></path>
            </svg>
            Retweet İşlemleri
          </h3>
          
          <div class="space-y-3">
            <div>
              <label class="block text-sm font-medium text-gray-300 mb-1">Retweet</label>
              <%= form.number_field "energy_costs[repost]", 
                  value: EnergyCostSetting.cost_for('repost') || 2, 
                  min: 0, max: 100,
                  class: "w-full px-3 py-2 bg-gray-800 border border-gray-600 rounded text-white focus:ring-2 focus:ring-green-500 focus:border-transparent" %>
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-300 mb-1">Unretweet</label>
              <%= form.number_field "energy_costs[unretweet]", 
                  value: EnergyCostSetting.cost_for('unretweet') || 0, 
                  min: 0, max: 100,
                  class: "w-full px-3 py-2 bg-gray-800 border border-gray-600 rounded text-white focus:ring-2 focus:ring-green-500 focus:border-transparent" %>
            </div>
          </div>
        </div>

        <!-- Comment Actions -->
        <div class="bg-gray-900 rounded-lg p-4 border border-gray-600">
          <h3 class="font-medium text-purple-400 mb-4 flex items-center">
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M18 5v8a2 2 0 01-2 2h-5l-5 4v-4H4a2 2 0 01-2-2V5a2 2 0 012-2h12a2 2 0 012 2zM7 8H5v2h2V8zm2 0h2v2H9V8zm6 0h-2v2h2V8z" clip-rule="evenodd"></path>
            </svg>
            Yorum İşlemleri
          </h3>
          
          <div class="space-y-3">
            <div>
              <label class="block text-sm font-medium text-gray-300 mb-1">Yorum/Reply</label>
              <%= form.number_field "energy_costs[reply]", 
                  value: EnergyCostSetting.cost_for('reply') || 3, 
                  min: 0, max: 100,
                  class: "w-full px-3 py-2 bg-gray-800 border border-gray-600 rounded text-white focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-300 mb-1">Yorum Silme</label>
              <%= form.number_field "energy_costs[delete_comment]", 
                  value: EnergyCostSetting.cost_for('delete_comment') || 0, 
                  min: 0, max: 100,
                  class: "w-full px-3 py-2 bg-gray-800 border border-gray-600 rounded text-white focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
            </div>
          </div>
        </div>

        <!-- Follow Actions -->
        <div class="bg-gray-900 rounded-lg p-4 border border-gray-600">
          <h3 class="font-medium text-yellow-400 mb-4 flex items-center">
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            Takip İşlemleri
          </h3>
          
          <div class="space-y-3">
            <div>
              <label class="block text-sm font-medium text-gray-300 mb-1">Takip Etme</label>
              <%= form.number_field "energy_costs[follow]", 
                  value: EnergyCostSetting.cost_for('follow') || 2, 
                  min: 0, max: 100,
                  class: "w-full px-3 py-2 bg-gray-800 border border-gray-600 rounded text-white focus:ring-2 focus:ring-yellow-500 focus:border-transparent" %>
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-300 mb-1">Takibi Bırakma</label>
              <%= form.number_field "energy_costs[unfollow]", 
                  value: EnergyCostSetting.cost_for('unfollow') || 0, 
                  min: 0, max: 100,
                  class: "w-full px-3 py-2 bg-gray-800 border border-gray-600 rounded text-white focus:ring-2 focus:ring-yellow-500 focus:border-transparent" %>
            </div>
          </div>
        </div>

        <!-- Other Actions -->
        <div class="bg-gray-900 rounded-lg p-4 border border-gray-600">
          <h3 class="font-medium text-indigo-400 mb-4 flex items-center">
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M11.49 3.17c-.38-1.56-2.6-1.56-2.98 0a1.532 1.532 0 01-2.286.948c-1.372-.836-2.942.734-2.106 2.106.54.886.061 2.042-.947 2.287-1.561.379-1.561 2.6 0 2.978a1.532 1.532 0 01.947 2.287c-.836 1.372.734 2.942 2.106 2.106a1.532 1.532 0 012.287.947c.379 1.561 2.6 1.561 2.978 0a1.533 1.533 0 012.287-.947c1.372.836 2.942-.734 2.106-2.106a1.533 1.533 0 01.947-2.287c1.561-.379 1.561-2.6 0-2.978a1.532 1.532 0 01-.947-2.287c.836-1.372-.734-2.942-2.106-2.106a1.532 1.532 0 01-2.287-.947zM10 13a3 3 0 100-6 3 3 0 000 6z" clip-rule="evenodd"></path>
            </svg>
            Diğer İşlemler
          </h3>
          
          <div class="space-y-3">
            <div>
              <label class="block text-sm font-medium text-gray-300 mb-1">Profil Güncelleme</label>
              <%= form.number_field "energy_costs[update_profile]", 
                  value: EnergyCostSetting.cost_for('update_profile') || 5, 
                  min: 0, max: 100,
                  class: "w-full px-3 py-2 bg-gray-800 border border-gray-600 rounded text-white focus:ring-2 focus:ring-indigo-500 focus:border-transparent" %>
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-300 mb-1">Mesaj Gönderme</label>
              <%= form.number_field "energy_costs[send_message]", 
                  value: EnergyCostSetting.cost_for('send_message') || 2, 
                  min: 0, max: 100,
                  class: "w-full px-3 py-2 bg-gray-800 border border-gray-600 rounded text-white focus:ring-2 focus:ring-indigo-500 focus:border-transparent" %>
            </div>
          </div>
        </div>
      </div>

      <!-- Save Button -->
      <div class="flex justify-end pt-6 border-t border-gray-700">
        <%= form.submit "Ayarları Kaydet", 
            class: "bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg font-medium transition-colors flex items-center" %>
      </div>
    <% end %>
  </div>

  <!-- Energy Cost Guidelines -->
  <div class="bg-gray-800 rounded-lg p-6 border border-gray-700">
    <h2 class="text-lg font-semibold text-white mb-4">Energy Maliyet Rehberi</h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <h3 class="font-medium text-green-400 mb-3">Düşük Maliyet (1-3 Energy)</h3>
        <ul class="text-sm text-gray-300 space-y-1">
          <li>• Like/Unlike işlemleri</li>
          <li>• Takip etme/bırakma</li>
          <li>• Basit etkileşimler</li>
        </ul>
      </div>
      
      <div>
        <h3 class="font-medium text-yellow-400 mb-3">Orta Maliyet (4-7 Energy)</h3>
        <ul class="text-sm text-gray-300 space-y-1">
          <li>• Retweet işlemleri</li>
          <li>• Yorum yapma</li>
          <li>• Profil güncelleme</li>
        </ul>
      </div>
      
      <div>
        <h3 class="font-medium text-red-400 mb-3">Yüksek Maliyet (8+ Energy)</h3>
        <ul class="text-sm text-gray-300 space-y-1">
          <li>• Post oluşturma</li>
          <li>• İçerik üretimi</li>
          <li>• Büyük değişiklikler</li>
        </ul>
      </div>
      
      <div>
        <h3 class="font-medium text-gray-400 mb-3">Ücretsiz İşlemler (0 Energy)</h3>
        <ul class="text-sm text-gray-300 space-y-1">
          <li>• İçerik görüntüleme</li>
          <li>• Profil ziyareti</li>
          <li>• Arama yapma</li>
        </ul>
      </div>
    </div>
  </div>
</div>