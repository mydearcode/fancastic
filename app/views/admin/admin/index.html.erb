<div class="px-4 py-6 sm:px-0">
  <div class="border-4 border-dashed border-gray-700 rounded-lg p-8">
    <h1 class="text-3xl font-bold text-white mb-8">Admin Dashboard</h1>
    
    <!-- Statistics Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-6 mb-8">
      <div class="bg-gray-800 overflow-hidden shadow rounded-lg border border-gray-700">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-blue-600 rounded-full flex items-center justify-center">
                <span class="text-white font-bold">C</span>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-400 truncate">Countries</dt>
                <dd class="text-lg font-medium text-white"><%= @countries_count %></dd>
              </dl>
            </div>
          </div>
        </div>
      </div>
      
      <div class="bg-gray-800 overflow-hidden shadow rounded-lg border border-gray-700">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-green-600 rounded-full flex items-center justify-center">
                <span class="text-white font-bold">L</span>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-400 truncate">Leagues</dt>
                <dd class="text-lg font-medium text-white"><%= @leagues_count %></dd>
              </dl>
            </div>
          </div>
        </div>
      </div>
      
      <div class="bg-gray-800 overflow-hidden shadow rounded-lg border border-gray-700">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-red-600 rounded-full flex items-center justify-center">
                <span class="text-white font-bold">T</span>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-400 truncate">Teams</dt>
                <dd class="text-lg font-medium text-white"><%= @teams_count %></dd>
              </dl>
            </div>
          </div>
        </div>
      </div>
      
      <div class="bg-gray-800 overflow-hidden shadow rounded-lg border border-gray-700">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-purple-600 rounded-full flex items-center justify-center">
                <span class="text-white font-bold">U</span>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-400 truncate">Users</dt>
                <dd class="text-lg font-medium text-white"><%= @users_count %></dd>
              </dl>
            </div>
          </div>
        </div>
      </div>
      
      <div class="bg-gray-800 overflow-hidden shadow rounded-lg border border-gray-700">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-pink-600 rounded-full flex items-center justify-center">
                <span class="text-white font-bold">P</span>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-400 truncate">Posts</dt>
                <dd class="text-lg font-medium text-white"><%= @posts_count %></dd>
              </dl>
            </div>
          </div>
        </div>
      </div>
      
      <div class="bg-gray-800 overflow-hidden shadow rounded-lg border border-gray-700">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-orange-600 rounded-full flex items-center justify-center">
                <span class="text-white font-bold">R</span>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-400 truncate">Reports</dt>
                <dd class="text-lg font-medium text-white"><%= @reports_count %></dd>
              </dl>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Quick Actions -->
    <div class="bg-gray-800 shadow rounded-lg p-6 border border-gray-700">
      <h2 class="text-lg font-medium text-white mb-4">Quick Actions</h2>
      <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <%= link_to admin_countries_path, class: "block p-4 border border-gray-700 rounded-lg hover:bg-gray-700 transition-colors bg-gray-900" do %>
          <h3 class="font-medium text-white">Manage Countries</h3>
          <p class="text-sm text-gray-400 mt-1">Add, edit, or remove countries</p>
        <% end %>
        
        <%= link_to admin_leagues_path, class: "block p-4 border border-gray-700 rounded-lg hover:bg-gray-700 transition-colors bg-gray-900" do %>
          <h3 class="font-medium text-white">Manage Leagues</h3>
          <p class="text-sm text-gray-400 mt-1">Add, edit, or remove leagues</p>
        <% end %>
        
        <%= link_to admin_teams_path, class: "block p-4 border border-gray-700 rounded-lg hover:bg-gray-700 transition-colors bg-gray-900" do %>
          <h3 class="font-medium text-white">Manage Teams</h3>
          <p class="text-sm text-gray-400 mt-1">Add, edit, or remove teams</p>
        <% end %>
        
        <%= link_to admin_reports_path, class: "block p-4 border border-gray-700 rounded-lg hover:bg-gray-700 transition-colors bg-orange-900" do %>
          <h3 class="font-medium text-white">Reports Management</h3>
          <p class="text-sm text-gray-400 mt-1">Review and handle user reports</p>
        <% end %>
      </div>
    </div>
  </div>
</div>