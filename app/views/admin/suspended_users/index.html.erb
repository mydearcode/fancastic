<h1 class="text-2xl font-bold mb-4 text-white">Suspended Users</h1>

<% if @suspended_users.any? %>
  <div class="overflow-x-auto">
    <table class="min-w-full bg-gray-800 border border-gray-700 text-gray-300">
      <thead>
        <tr>
          <th class="px-4 py-2 border-b border-gray-700 text-gray-200">Username</th>
          <th class="px-4 py-2 border-b border-gray-700 text-gray-200">Email</th>
          <th class="px-4 py-2 border-b border-gray-700 text-gray-200">Suspended At</th>
          <th class="px-4 py-2 border-b border-gray-700 text-gray-200">Reason</th>
          <th class="px-4 py-2 border-b border-gray-700 text-gray-200">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @suspended_users.each do |user| %>
          <tr class="hover:bg-gray-700">
            <td class="px-4 py-2 border-b border-gray-700"><%= user.username %></td>
            <td class="px-4 py-2 border-b border-gray-700"><%= user.email_address %></td>
            <td class="px-4 py-2 border-b border-gray-700"><%= user.suspend_date ? user.suspend_date.strftime("%Y-%m-%d") : "N/A" %></td>
            <td class="px-4 py-2 border-b border-gray-700"><%= user.suspend_reason || "N/A" %></td>
            <td class="px-4 py-2 border-b border-gray-700">
              <%= button_to "Unsuspend", unsuspend_admin_suspended_user_path(user), method: :patch, class: "bg-green-600 hover:bg-green-700 text-white py-1 px-3 rounded", data: { confirm: "Are you sure you want to unsuspend this user?" } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <p class="text-gray-400">No suspended users found.</p>
<% end %>