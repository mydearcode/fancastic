<div class="px-4 py-6 sm:px-0">
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <h1 class="text-xl font-semibold text-white">Users</h1>
      <p class="mt-2 text-sm text-gray-300">Manage all users in the system.</p>
    </div>
  </div>
  
  <!-- Search Form -->
  <div class="mt-6 mb-8">
    <%= form_with url: search_admin_users_path, method: :get, class: "flex gap-2" do |f| %>
      <%= f.text_field :query, placeholder: "Search by username or email", class: "rounded-md border-gray-700 bg-gray-800 text-white shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm w-full max-w-md" %>
      <%= f.submit "Search", class: "inline-flex items-center rounded-md border border-transparent bg-indigo-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
    <% end %>
  </div>
  
  <% if flash[:alert] %>
    <div class="mb-4 rounded-md bg-red-50 p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800"><%= flash[:alert] %></h3>
        </div>
      </div>
    </div>
  <% end %>
  
  <div class="mt-4 flex flex-col">
    <div class="-my-2 -mx-4 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="inline-block min-w-full py-2 align-middle md:px-6 lg:px-8">
        <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 md:rounded-lg">
          <table class="min-w-full bg-gray-800 border border-gray-700 text-gray-300">
            <thead>
              <tr>
                <th scope="col" class="px-6 py-3 border-b border-gray-700 text-left text-xs font-medium text-gray-200 uppercase tracking-wider">Username</th>
                <th scope="col" class="px-6 py-3 border-b border-gray-700 text-left text-xs font-medium text-gray-200 uppercase tracking-wider">Email</th>
                <th scope="col" class="px-6 py-3 border-b border-gray-700 text-left text-xs font-medium text-gray-200 uppercase tracking-wider">Role</th>
                <th scope="col" class="px-6 py-3 border-b border-gray-700 text-left text-xs font-medium text-gray-200 uppercase tracking-wider">Status</th>
                <th scope="col" class="px-6 py-3 border-b border-gray-700 text-left text-xs font-medium text-gray-200 uppercase tracking-wider">Created At</th>
                <th scope="col" class="px-6 py-3 border-b border-gray-700 text-left text-xs font-medium text-gray-200 uppercase tracking-wider">Actions</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-700">
              <% @users.each do |user| %>
                <tr>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-white"><%= user.username %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300"><%= user.email_address %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">
                    <% if user.admin? %>
                      <span class="inline-flex items-center rounded-md bg-purple-100 px-2.5 py-0.5 text-sm font-medium text-purple-800">Admin</span>
                    <% else %>
                      <span class="inline-flex items-center rounded-md bg-blue-100 px-2.5 py-0.5 text-sm font-medium text-blue-800">User</span>
                    <% end %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">
                    <% if user.suspended? %>
                      <span class="inline-flex items-center rounded-md bg-red-100 px-2.5 py-0.5 text-sm font-medium text-red-800">Suspended</span>
                    <% else %>
                      <span class="inline-flex items-center rounded-md bg-green-100 px-2.5 py-0.5 text-sm font-medium text-green-800">Active</span>
                    <% end %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300"><%= user.created_at.strftime("%Y-%m-%d") %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">
                    <% if user.suspended? %>
                      <%= button_to unsuspend_admin_user_path(user), method: :patch, class: "inline-flex items-center rounded-md bg-green-600 px-3 py-1.5 text-sm font-medium text-white shadow-sm hover:bg-green-500 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2" do %>
                        Unsuspend
                      <% end %>
                    <% else %>
                      <%= button_to suspend_admin_user_path(user), method: :patch, class: "inline-flex items-center rounded-md bg-red-600 px-3 py-1.5 text-sm font-medium text-white shadow-sm hover:bg-red-500 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2" do %>
                        Suspend
                      <% end %>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Pagination -->
  <div class="mt-6">
    <%== pagy_nav(@pagy) %>
  </div>
</div>