<h1 class="text-2xl font-bold mb-4">Kullanıcı Askıya Alma Logları</h1>

<div class="bg-white shadow-md rounded-lg overflow-hidden">
  <div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Kullanıcı</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Askıya Alan</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Askıya Alma Tarihi</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Askıya Alma Nedeni</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Askıdan Çıkaran</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Askıdan Çıkarma Tarihi</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @logs.each do |log| %>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="flex items-center">
                <div class="ml-4">
                  <div class="text-sm font-medium text-gray-900"><%= log.user_username %></div>
                  <div class="text-sm text-gray-500"><%= log.user.email_address %></div>
                </div>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm font-medium text-gray-900"><%= log.suspended_by_username %></div>
              <div class="text-sm text-gray-500"><%= log.suspended_by.email_address %></div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm text-gray-900"><%= log.suspended_at.strftime("%d/%m/%Y %H:%M") %></div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <% if log.suspend_reason.present? %>
                <div class="text-sm text-gray-900"><%= log.suspend_reason&.humanize %></div>
              <% else %>
                <span class="text-sm text-gray-500">-</span>
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <% if log.unsuspended_by.present? %>
                <div class="text-sm text-gray-900"><%= log.unsuspended_by_username %></div>
                <div class="text-sm text-gray-500"><%= log.unsuspended_by.email_address %></div>
              <% else %>
                <span class="text-sm text-gray-500">-</span>
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <% if log.unsuspended_at.present? %>
                <div class="text-sm text-gray-900"><%= log.unsuspended_at.strftime("%d/%m/%Y %H:%M") %></div>
              <% else %>
                <span class="text-sm text-gray-500">-</span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="mt-4">
  <%== pagy_nav(@pagy) %>
</div>