<div class="px-4 py-6 sm:px-0">
  <div class="md:grid md:grid-cols-3 md:gap-6">
    <div class="md:col-span-1">
      <div class="px-4 sm:px-0">
        <h3 class="text-lg font-medium leading-6 text-gray-900">Add New Country</h3>
        <p class="mt-1 text-sm text-gray-600">
          Create a new country in the system.
        </p>
      </div>
    </div>
    
    <div class="mt-5 md:mt-0 md:col-span-2">
      <%= form_with model: [:admin, @country], local: true, class: "space-y-6" do |form| %>
        <div class="shadow sm:rounded-md sm:overflow-hidden">
          <div class="px-4 py-5 bg-white space-y-6 sm:p-6">
            <% if @country.errors.any? %>
              <div class="rounded-md bg-red-50 p-4">
                <div class="flex">
                  <div class="ml-3">
                    <h3 class="text-sm font-medium text-red-800">
                      There were <%= pluralize(@country.errors.count, "error") %> with your submission:
                    </h3>
                    <div class="mt-2 text-sm text-red-700">
                      <ul class="list-disc pl-5 space-y-1">
                        <% @country.errors.full_messages.each do |message| %>
                          <li><%= message %></li>
                        <% end %>
                      </ul>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
            
            <div>
              <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
              <%= form.text_field :name, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
            </div>
            
            <div>
              <%= form.label :code, "Country Code", class: "block text-sm font-medium text-gray-700" %>
              <%= form.text_field :code, placeholder: "e.g., US, UK, ES", class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
              <p class="mt-2 text-sm text-gray-500">2-3 letter country code (ISO format recommended)</p>
            </div>
          </div>
          
          <div class="px-4 py-3 bg-gray-50 text-right sm:px-6 space-x-3">
            <%= link_to "Cancel", admin_countries_path, class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
            <%= form.submit "Create Country", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>