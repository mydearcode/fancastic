<%= turbo_stream.replace "follow_button_#{@user.id}" do %>
  <%= button_to "Follow", user_follow_path(@user.username), method: :post, 
      class: "inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500",
      data: { turbo_stream: true },
      id: "follow_button_#{@user.id}" %>
<% end %>

<%= turbo_stream.replace "followers_count" do %>
  <%= @user.reload.followers_count %>
<% end %>

<%= turbo_stream.replace "flash" do %>
  <%= render 'shared/flash', notice: "Successfully unfollowed #{@user.username}!" %>
<% end %>