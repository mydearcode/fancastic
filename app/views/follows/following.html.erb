<div class="max-w-4xl mx-auto p-6">
  <div class="bg-white rounded-lg shadow-lg overflow-hidden">
    <!-- Header -->
    <div class="px-6 py-4 border-b border-gray-200">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-2xl font-bold text-gray-900"><%= @user.username %> is Following</h1>
          <p class="text-gray-600">Following <%= pluralize(@following.count, 'user') %></p>
        </div>
        <%= link_to "← Back to Profile", user_profile_path(@user), class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
      </div>
    </div>

    <!-- Following List -->
    <div class="divide-y divide-gray-200">
      <% if @following.any? %>
        <% @following.each do |followed_user| %>
          <div class="px-6 py-4 flex items-center justify-between hover:bg-gray-50">
            <div class="flex items-center space-x-4">
              <div class="w-12 h-12 bg-gray-300 rounded-full flex items-center justify-center text-lg font-bold text-gray-600">
                <%= followed_user.username.first.upcase if followed_user.username.present? %>
              </div>
              <div>
                <%= link_to user_profile_path(followed_user), class: "text-lg font-semibold text-gray-900 hover:text-blue-600" do %>
                  <%= followed_user.username %>
                <% end %>
                <% if followed_user.team.present? %>
                  <p class="text-sm text-gray-600"><%= followed_user.team.name %> fan</p>
                <% end %>
              </div>
            </div>
            
            <% if Current.user != followed_user %>
              <div class="flex space-x-2">
                <% if Current.user.following?(followed_user) %>
                  <%= button_to "Unfollow", user_follow_path(followed_user), method: :delete, 
                      class: "bg-red-500 hover:bg-red-700 text-white font-bold py-1 px-3 rounded text-sm border-0" %>
                <% else %>
                  <%= button_to "Follow", user_follow_path(followed_user), method: :post, 
                      class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-1 px-3 rounded text-sm border-0" %>
                <% end %>
              </div>
            <% end %>
          </div>
        <% end %>
      <% else %>
        <div class="px-6 py-8 text-center">
          <p class="text-gray-500 text-lg">Not following anyone yet.</p>
        </div>
      <% end %>
    </div>


  </div>
</div>