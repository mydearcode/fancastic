<%= turbo_stream.replace "follow_button_#{@user.id}" do %>
  <%= button_to "Unfollow", user_follow_path(@user), method: :delete, 
      class: "inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500",
      data: { turbo_stream: true },
      id: "follow_button_#{@user.id}" %>
<% end %>

<%= turbo_stream.replace "followers_count" do %>
  <%= @user.reload.followers_count %>
<% end %>

<%= turbo_stream.replace "flash" do %>
  <%= render 'shared/flash', notice: "Successfully followed #{@user.username}!" %>
<% end %>