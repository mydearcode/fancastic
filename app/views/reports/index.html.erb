<div class="container mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold text-white mb-6">Reports Management</h1>
  
  <% if @reports.any? %>
    <div class="bg-gray-800 rounded-lg shadow overflow-hidden">
      <table class="min-w-full divide-y divide-gray-700">
        <thead class="bg-gray-900">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Reported Item</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Reason</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Reporter</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Status</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Date</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-gray-800 divide-y divide-gray-700">
          <% @reports.each do |report| %>
            <tr class="hover:bg-gray-700">
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="flex items-center">
                  <div class="ml-4">
                    <% if report.reportable_type == "Post" %>
                      <div class="text-sm font-medium text-white">Post</div>
                      <div class="text-sm text-gray-400">
                        <%= link_to "View Post", post_path(report.reportable), class: "text-blue-400 hover:underline" %>
                      </div>
                      <div class="text-xs text-gray-500 mt-1">
                        <%= report.reportable.text.truncate(50) %>
                      </div>
                    <% elsif report.reportable_type == "User" %>
                      <div class="text-sm font-medium text-white">User</div>
                      <div class="text-sm text-gray-400">
                        <%= link_to "@#{report.reportable.username}", user_profile_path(report.reportable.username), class: "text-blue-400 hover:underline" %>
                      </div>
                    <% end %>
                  </div>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="px-2 py-1 inline-flex text-xs leading-5 font-semibold rounded-full 
                  <%= case report.reason
                      when 'spam' then 'bg-yellow-800 text-yellow-100'
                      when 'insult' then 'bg-red-800 text-red-100'
                      when 'fraud' then 'bg-purple-800 text-purple-100'
                      when 'impersonation' then 'bg-blue-800 text-blue-100'
                      end %>">
                  <%= report.reason.humanize %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">
                <%= link_to "@#{report.reporter.username}", user_profile_path(report.reporter.username), class: "text-blue-400 hover:underline" %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="px-2 py-1 inline-flex text-xs leading-5 font-semibold rounded-full 
                  <%= case report.status
                      when 'pending' then 'bg-yellow-800 text-yellow-100'
                      when 'archived' then 'bg-gray-800 text-gray-100'
                      when 'resolved' then 'bg-green-800 text-green-100'
                      end %>">
                  <%= report.status.humanize %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">
                <%= report.created_at.strftime("%d %b %Y") %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <div class="flex space-x-2">
                  <% if report.pending? %>
                    <%= button_to report_path(report, suspend_user: true), method: :patch, 
                        class: "text-xs bg-red-600 hover:bg-red-700 text-white py-1 px-2 rounded" do %>
                      Suspend User
                    <% end %>
                    
                    <%= button_to report_path(report, archive: true), method: :patch, 
                        class: "text-xs bg-gray-600 hover:bg-gray-700 text-white py-1 px-2 rounded" do %>
                      Archive
                    <% end %>
                  <% end %>
                  
                  <%= button_to report_path(report), method: :delete, 
                      data: { turbo_confirm: "Are you sure you want to delete this report?" },
                      class: "text-xs bg-gray-600 hover:bg-gray-700 text-white py-1 px-2 rounded" do %>
                    Delete
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    
    <div class="mt-6">
      <%== pagy_nav(@pagy) %>
    </div>
  <% else %>
    <div class="bg-gray-800 rounded-lg p-8 text-center">
      <p class="text-gray-400 text-lg">No reports found.</p>
    </div>
  <% end %>
</div>