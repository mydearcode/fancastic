<%= turbo_frame_tag "modal" do %>
  <div class="fixed inset-0 bg-gray-900 bg-opacity-75 flex items-center justify-center z-50" onclick="closeModal(event)">
    <div class="bg-gray-800 rounded-xl shadow-xl max-w-md w-full mx-4 p-6 border border-gray-700">
      <div class="flex justify-between items-center mb-4">
        <h2 class="text-xl font-bold text-white">Report <%= @reportable_type %></h2>
        <button type="button" onclick="document.getElementById('modal').innerHTML = ''" class="text-gray-400 hover:text-white">
          <span class="text-2xl">&times;</span>
        </button>
      </div>
      
      <% if @reportable %>
        <div class="mb-4 p-3 bg-gray-700 rounded-lg">
          <% if @reportable_type == "Post" %>
            <p class="text-gray-300 text-sm mb-2">
              <strong>Post by:</strong> @<%= @reportable.user.username %>
            </p>
            <p class="text-white"><%= @reportable.text.truncate(100) %></p>
          <% elsif @reportable_type == "User" %>
            <p class="text-white">
              <strong>User:</strong> @<%= @reportable.username %>
            </p>
          <% end %>
        </div>
      <% end %>
      
      <%= form_with(model: @report, class: "space-y-4", data: { turbo: true }, onsubmit: "setTimeout(function() { document.getElementById('modal').innerHTML = ''; }, 300);" ) do |form| %>
        <%= form.hidden_field :reportable_type, value: @reportable_type %>
        <%= form.hidden_field :reportable_id, value: @reportable_id %>
        
        <div>
          <label class="block text-sm font-medium text-gray-300 mb-1">Report Reason</label>
          <div class="space-y-2">
            <% Report.reasons.keys.each do |reason| %>
              <div class="flex items-center">
                <%= form.radio_button :reason, reason, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-600 bg-gray-700" %>
                <label class="ml-2 text-sm text-gray-300">
                  <%= reason.humanize %>
                </label>
              </div>
            <% end %>
          </div>
        </div>
        
        <div class="flex justify-end space-x-3 mt-6">
          <button type="button" onclick="document.getElementById('modal').innerHTML = ''" class="px-4 py-2 bg-gray-600 text-white rounded-md hover:bg-gray-700">
            Cancel
          </button>
          <%= form.submit "Submit Report", class: "px-4 py-2 bg-red-600 text-white rounded-md hover:bg-red-700" %>
        </div>
      <% end %>
    </div>
  </div>
  
  <script>
    function closeModal(event) {
      if (event.target === event.currentTarget) {
        document.getElementById('modal').innerHTML = '';
      }
    }
    
    // Close modal on Escape key
    document.addEventListener('keydown', function(event) {
      if (event.key === 'Escape') {
        document.getElementById('modal').innerHTML = '';
      }
    });
  </script>
<% end %>
