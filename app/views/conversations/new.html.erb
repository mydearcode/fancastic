<div class="max-w-2xl mx-auto px-4 py-6">
  <div class="md:grid md:grid-cols-3 md:gap-6">
    <div class="md:col-span-1">
      <div class="px-4 sm:px-0">
        <h3 class="text-lg font-medium leading-6 text-gray-900">New Conversation</h3>
        <p class="mt-1 text-sm text-gray-600">
          Start a new conversation with other fans.
        </p>
      </div>
    </div>
    
    <div class="mt-5 md:mt-0 md:col-span-2">
      <%= form_with model: @conversation, local: true, class: "space-y-6" do |form| %>
        <div class="shadow sm:rounded-md sm:overflow-hidden">
          <div class="px-4 py-5 bg-white space-y-6 sm:p-6">
            <% if @conversation.errors.any? %>
              <div class="rounded-md bg-red-50 p-4">
                <div class="flex">
                  <div class="ml-3">
                    <h3 class="text-sm font-medium text-red-800">
                      There were <%= pluralize(@conversation.errors.count, "error") %> with your submission:
                    </h3>
                    <div class="mt-2 text-sm text-red-700">
                      <ul class="list-disc pl-5 space-y-1">
                        <% @conversation.errors.full_messages.each do |message| %>
                          <li><%= message %></li>
                        <% end %>
                      </ul>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
            
            <div>
              <%= form.label :title, "Conversation Title (Optional)", class: "block text-sm font-medium text-gray-700" %>
              <%= form.text_field :title, placeholder: "Enter a title for this conversation", class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
              <p class="mt-2 text-sm text-gray-500">If left empty, the conversation will be named after the participants.</p>
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-700">Select Participants</label>
              <div class="mt-2 space-y-2 max-h-60 overflow-y-auto border border-gray-300 rounded-md p-3">
                <% @users.each do |user| %>
                  <div class="flex items-center">
                    <input type="checkbox" name="participant_ids[]" value="<%= user.id %>" id="user_<%= user.id %>" class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" <%= 'checked' if @selected_user_id && @selected_user_id.to_i == user.id %>>
                    <label for="user_<%= user.id %>" class="ml-3 flex items-center cursor-pointer">
                      <div class="flex-shrink-0">
                        <div class="h-8 w-8 rounded-full bg-indigo-500 flex items-center justify-center">
                          <span class="text-xs font-medium text-white">
                            <%= user.username.first.upcase %>
                          </span>
                        </div>
                      </div>
                      <div class="ml-3">
                        <p class="text-sm font-medium text-gray-900"><%= user.username %></p>
                        <% if user.team %>
                          <p class="text-xs text-gray-500"><%= user.team.name %> fan</p>
                        <% end %>
                      </div>
                    </label>
                  </div>
                <% end %>
                
                <% if @users.empty? %>
                  <p class="text-sm text-gray-500 text-center py-4">
                    No users available to message at the moment.
                  </p>
                <% end %>
              </div>
              <p class="mt-2 text-sm text-gray-500">Select one or more users to start a conversation with.</p>
            </div>
          </div>
          
          <div class="px-4 py-3 bg-gray-50 text-right sm:px-6 space-x-3">
            <%= link_to "Cancel", conversations_path, class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
            <%= form.submit "Start Conversation", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500", onclick: "return validateParticipants()" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
function validateParticipants() {
  const checkboxes = document.querySelectorAll('input[name="participant_ids[]"]:checked');
  const currentUserId = '<%= Current.user.id %>';
  
  // Check if no participants selected
  if (checkboxes.length === 0) {
    alert('Lütfen en az bir katılımcı seçin.');
    return false;
  }
  
  // Check if user selected themselves
  for (let checkbox of checkboxes) {
    if (checkbox.value === currentUserId) {
      alert('Kendinizle konuşma başlatamazsınız.');
      return false;
    }
  }
  
  return true;
}
</script>