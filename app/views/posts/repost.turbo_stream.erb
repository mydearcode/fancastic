<%= turbo_stream.replace "post_#{@post.id}" do %>
  <%= render 'post', post: @post %>
<% end %>

<%= turbo_stream.prepend "posts" do %>
  <%= render 'post', post: @repost %>
<% end %>

<%= turbo_stream.replace "flash" do %>
  <%= render 'shared/flash', notice: "Post reposted successfully!" %>
<% end %>