<!-- Determine target post for interactions -->
<% target_post = post.repost_of_post_id.present? && post.text.blank? ? post.repost_of_post : post %>

<div id="post_<%= post.id %>" class="bg-black border-b border-gray-800 py-3 hover:bg-gray-950 transition-colors cursor-pointer relative" data-controller="post-click image-viewer" data-post-click-url-value="<%= smart_post_path(target_post) %>">
  
  <% if post.repost_of_post_id.present? && post.text.blank? %>
    <!-- Repost indicator at the top -->
    <div class="text-gray-400 mb-2 text-sm flex items-center pl-12 relative z-10">
      <span class="mr-1">üîÑ</span> 
      <%= link_to post.user.username, user_profile_path(post.user.username), class: "text-blue-400 hover:text-blue-300", data: { turbo_frame: "_top" } %>
      <% if post.user.team.present? %>
        <span class="px-2 py-0.5 text-xs font-medium rounded mx-1" style="background-color: <%= post.user.team.color_primary %>; color: <%= post.user.team.color_secondary %>;">
          <%= post.user.team.symbol_slug.upcase %>
        </span>
      <% end %>
      Reposted
    </div>
  <% end %>
  
  <!-- Post Header -->
  <div class="flex items-start space-x-3">
    <div class="w-12 h-12 rounded-full flex items-center justify-center text-white font-bold text-lg flex-shrink-0 relative z-10 overflow-hidden" 
         data-controller="profile-hover" 
         data-profile-hover-username-value="<%= target_post.user.username %>"
         data-action="mouseenter->profile-hover#mouseEnter mouseleave->profile-hover#mouseLeave">
      <%= link_to user_profile_path(target_post.user.username), class: "absolute inset-0 flex items-center justify-center", data: { turbo_frame: "_top" } do %>
        <% if target_post.user.profile_picture.attached? %>
          <%= image_tag url_for(target_post.user.profile_picture), class: "w-full h-full object-cover rounded-full" %>
        <% else %>
          <div class="w-full h-full bg-gradient-to-r from-blue-500 to-purple-600 flex items-center justify-center rounded-full">
            <%= target_post.user.username.first.upcase %>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="flex-1 min-w-0">
      <div class="flex items-center justify-between mb-1 relative z-10">
        <div class="flex items-center space-x-2">
          <span class="font-bold text-white">
            <%= link_to target_post.user.username, user_profile_path(target_post.user.username), 
                class: "text-white hover:text-gray-300", 
                data: { 
                  turbo_frame: "_top",
                  controller: "profile-hover",
                  "profile-hover-username-value": target_post.user.username,
                  action: "mouseenter->profile-hover#mouseEnter mouseleave->profile-hover#mouseLeave"
                } %>
          </span>
          <% if target_post.user.team.present? %>
            <span class="px-2 py-0.5 text-xs font-medium rounded" style="background-color: <%= target_post.user.team.color_primary %>; color: <%= target_post.user.team.color_secondary %>;">
              <%= target_post.user.team.symbol_slug.upcase %>
            </span>
          <% end %>
          <span class="text-gray-500 font-normal">
            <%= link_to "@#{target_post.user.username}", user_profile_path(target_post.user.username), 
                class: "text-gray-500 hover:text-gray-400", 
                data: { 
                  turbo_frame: "_top",
                  controller: "profile-hover",
                  "profile-hover-username-value": target_post.user.username,
                  action: "mouseenter->profile-hover#mouseEnter mouseleave->profile-hover#mouseLeave"
                } %>
          </span>
          <span class="text-gray-500">¬∑</span>
          <span class="text-gray-500 text-sm"><%= time_ago_in_words(target_post.created_at) %></span>
          <% if target_post.visibility != 'everyone' %>
            <span class="px-2 py-0.5 text-xs bg-gray-800 text-gray-300 rounded-full">
              <%= target_post.visibility.humanize %>
            </span>
          <% end %>
        </div>
        
        <!-- Post Options Dropdown -->
        <div class="relative inline-block text-left">
          <button type="button" onclick="event.stopPropagation(); toggleDropdown('post-options-<%= post.id %>')" 
                  class="text-gray-500 hover:text-white transition-colors p-1 rounded-full hover:bg-gray-800">
            <span class="text-lg">‚ãØ</span>
          </button>
          
          <!-- Dropdown Menu -->
          <div id="post-options-<%= post.id %>" class="hidden absolute right-0 mt-2 w-48 bg-gray-900 rounded-xl shadow-2xl border border-gray-700 z-50">
            <div class="py-1">
              <% if post.user == Current.user %>
                <%= link_to smart_post_path(post), 
                    data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this post?", turbo_stream: true },
                    class: "block px-4 py-2 text-sm text-white hover:bg-gray-800 flex items-center transition-colors" do %>
                  <span class="mr-3 text-lg">üóëÔ∏è</span>
                  Delete
                <% end %>
              <% else %>
                <%= link_to new_report_path(reportable_type: "Post", reportable_id: post.id), 
                    data: { turbo_frame: "modal" },
                    class: "block px-4 py-2 text-sm text-white hover:bg-gray-800 flex items-center transition-colors" do %>
                  <span class="mr-3 text-lg">üö©</span>
                  Report
                <% end %>
                
                <% unless Current.user.blocked_users.include?(post.user) %>
                  <%= link_to blocks_path, 
                      method: :post,
                      params: { blocked_user_id: post.user.id },
                      data: { turbo_method: :post, turbo_stream: true, turbo_confirm: "Block @#{post.user.username}?" },
                      class: "block px-4 py-2 text-sm text-white hover:bg-gray-800 flex items-center transition-colors" do %>
                    <span class="mr-3 text-lg">üö´</span>
                    Block @<%= post.user.username %>
                  <% end %>
                <% else %>
                  <%= link_to user_block_path(post.user, Current.user.user_blocks.find_by(blocked_id: post.user.id)), 
                      method: :delete,
                      data: { turbo_method: :delete, turbo_stream: true, turbo_confirm: "Unblock @#{post.user.username}?" },
                      class: "block px-4 py-2 text-sm text-white hover:bg-gray-800 flex items-center transition-colors" do %>
                    <span class="mr-3 text-lg">‚úÖ</span>
                    Unblock @<%= post.user.username %>
                  <% end %>
                <% end %>
              <% end %>
              
              <!-- Placeholder for future "Pin to profile" option -->
            </div>
          </div>
        </div>
      </div>

      <!-- Post Content -->
      <div class="mt-1">
        <% if post.repost_of_post_id.present? && post.text.blank? %>
          <!-- Pure Repost -->
          <div class="pl-0 ml-0">
            <% if post.repost_of_post.in_reply_to_post_id.present? %>
              <!-- Reposted Reply Post -->
              <div class="text-gray-400 mb-2 text-sm flex items-center relative z-10">
                <span class="mr-1">‚Ü©Ô∏è</span> Replying to <%= link_to "@#{post.repost_of_post.in_reply_to_post.user.username}", user_profile_path(post.repost_of_post.in_reply_to_post.user.username), class: "text-blue-400 hover:text-blue-300", data: { turbo_frame: "_top" } %>
              </div>
              <p class="text-white break-words"><%= embed_videos(post.repost_of_post.text) %></p>
              <% if post.repost_of_post.images.attached? %>
                <div class="mt-3">
                  <% if post.repost_of_post.images.count == 1 %>
                    <%= image_tag post.repost_of_post.images.first, 
                        class: "max-w-full h-auto rounded-2xl border border-gray-700 cursor-pointer",
                        style: "max-height: 400px; object-fit: cover;",
                        alt: "Reposted image",
                        data: { action: "click->image-viewer#openViewer", image_url: url_for(post.repost_of_post.images.first), image_viewer_target: "image" } %>
                  <% else %>
                    <div class="grid <%= post.repost_of_post.images.count == 2 ? 'grid-cols-2' : 'grid-cols-2' %> gap-2">
                      <% post.repost_of_post.images.limit(4).each_with_index do |image, index| %>
                        <div class="relative <%= index >= 2 && post.repost_of_post.images.count > 4 ? 'hidden' : '' %>">
                          <%= image_tag image, 
                              class: "w-full h-48 object-cover rounded-xl border border-gray-700 cursor-pointer",
                              alt: "Reposted image #{index + 1}",
                              data: { action: "click->image-viewer#openViewer", image_url: url_for(image), image_viewer_target: "image" } %>
                          <% if index == 3 && post.repost_of_post.images.count > 4 %>
                            <div class="absolute inset-0 bg-black bg-opacity-60 flex items-center justify-center rounded-xl">
                              <span class="text-white text-xl font-bold">+<%= post.repost_of_post.images.count - 4 %></span>
                            </div>
                          <% end %>
                        </div>
                      <% end %>
                    </div>
                  <% end %>
                </div>
              <% end %>
            <% elsif post.repost_of_post.quote_of_post_id.present? %>
              <!-- Reposted Quote Post -->
              <p class="text-white mb-3 break-words" style="word-break: break-all; overflow-wrap: break-word; hyphens: auto;"><%= embed_videos(post.repost_of_post.text) %></p>
              <div class="border border-gray-700 rounded-xl p-3 bg-gray-900">
                <p class="text-gray-300 break-words" style="word-break: break-all; overflow-wrap: break-word; hyphens: auto;"><%= embed_videos(post.repost_of_post.quote_of_post.text) %></p>
                <% if post.repost_of_post.quote_of_post.images.attached? %>
                  <div class="mt-3">
                    <% if post.repost_of_post.quote_of_post.images.count == 1 %>
                      <%= image_tag post.repost_of_post.quote_of_post.images.first, 
                          class: "max-w-full h-auto rounded-2xl border border-gray-700 cursor-pointer",
                          style: "max-height: 300px; object-fit: cover;",
                          alt: "Quoted post image",
                          data: { action: "click->image-viewer#openViewer", image_url: url_for(post.repost_of_post.quote_of_post.images.first), image_viewer_target: "image" } %>
                    <% else %>
                      <div class="grid <%= post.repost_of_post.quote_of_post.images.count == 2 ? 'grid-cols-2' : 'grid-cols-2' %> gap-2">
                        <% post.repost_of_post.quote_of_post.images.limit(4).each_with_index do |image, index| %>
                          <div class="relative <%= index >= 2 && post.repost_of_post.quote_of_post.images.count > 4 ? 'hidden' : '' %>">
                            <%= image_tag image, 
                                class: "w-full h-32 object-cover rounded-xl border border-gray-700 cursor-pointer",
                                alt: "Quoted post image #{index + 1}",
                                data: { action: "click->image-viewer#openViewer", image_url: url_for(image), image_viewer_target: "image" } %>
                            <% if index == 3 && post.repost_of_post.quote_of_post.images.count > 4 %>
                              <div class="absolute inset-0 bg-black bg-opacity-60 flex items-center justify-center rounded-xl">
                                <span class="text-white text-xl font-bold">+<%= post.repost_of_post.quote_of_post.images.count - 4 %></span>
                              </div>
                            <% end %>
                          </div>
                        <% end %>
                      </div>
                    <% end %>
                  </div>
                <% end %>
                <p class="text-sm text-gray-500 mt-2"><%= link_to "@#{post.repost_of_post.quote_of_post.user.username}", user_profile_path(post.repost_of_post.quote_of_post.user.username), class: "text-blue-400 hover:text-blue-300" %></p>
              </div>
            <% else %>
              <!-- Regular Repost -->
              <p class="text-white break-words" style="word-break: break-all; overflow-wrap: break-word; hyphens: auto;"><%= embed_videos(post.repost_of_post.text) %></p>
              <% if post.repost_of_post.images.attached? %>
                <div class="mt-3">
                  <% if post.repost_of_post.images.count == 1 %>
                    <%= image_tag post.repost_of_post.images.first, 
                        class: "max-w-full h-auto rounded-2xl border border-gray-700 cursor-pointer",
                        style: "max-height: 400px; object-fit: cover;",
                        alt: "Reposted image",
                        data: { action: "click->image-viewer#openViewer", image_url: url_for(post.repost_of_post.images.first), image_viewer_target: "image" } %>
                  <% else %>
                    <div class="grid <%= post.repost_of_post.images.count == 2 ? 'grid-cols-2' : 'grid-cols-2' %> gap-2">
                      <% post.repost_of_post.images.limit(4).each_with_index do |image, index| %>
                        <div class="relative <%= index >= 2 && post.repost_of_post.images.count > 4 ? 'hidden' : '' %>">
                          <%= image_tag image, 
                              class: "w-full h-48 object-cover rounded-xl border border-gray-700 cursor-pointer",
                              alt: "Reposted image #{index + 1}",
                              data: { action: "click->image-viewer#openViewer", image_url: url_for(image), image_viewer_target: "image" } %>
                          <% if index == 3 && post.repost_of_post.images.count > 4 %>
                            <div class="absolute inset-0 bg-black bg-opacity-60 flex items-center justify-center rounded-xl">
                              <span class="text-white text-xl font-bold">+<%= post.repost_of_post.images.count - 4 %></span>
                            </div>
                          <% end %>
                        </div>
                      <% end %>
                    </div>
                  <% end %>
                </div>
              <% end %>
            <% end %>
          </div>
        <% elsif post.quote_of_post_id.present? %>
          <!-- Quote Post -->
          <div class="relative z-10">
            <div class="text-white mb-3 hover:text-gray-300 transition-colors relative z-10 break-words" style="word-break: break-all; overflow-wrap: break-word; hyphens: auto;">
              <%= embed_videos(post.text) %>
            </div>
          </div>
          <!-- Quoted Original Post - Separate clickable area -->
          <div class="border border-gray-700 rounded-xl p-3 bg-gray-900 relative z-10 hover:bg-gray-800 transition-colors">
            <%= link_to smart_post_path(post.quote_of_post), class: "absolute inset-0 z-20", data: { turbo_frame: "_top", turbo_prefetch: false } do %>
            <% end %>
            <div class="relative z-10 pointer-events-none">
              <div class="pointer-events-auto">
                <p class="text-gray-300 break-words" style="word-break: break-all; overflow-wrap: break-word; hyphens: auto;"><%= embed_videos(post.quote_of_post.text) %></p>
              </div>
              <% if post.quote_of_post.images.attached? %>
                <div class="mt-3">
                  <% if post.quote_of_post.images.count == 1 %>
                    <%= image_tag post.quote_of_post.images.first, 
                    class: "max-w-full h-auto rounded-2xl border border-gray-700 cursor-pointer",
                    style: "max-height: 300px; object-fit: cover;",
                    alt: "Quoted post image",
                    data: { action: "click->image-viewer#openViewer", image_url: url_for(post.quote_of_post.images.first), image_viewer_target: "image" } %>
                  <% else %>
                    <div class="grid <%= post.quote_of_post.images.count == 2 ? 'grid-cols-2' : 'grid-cols-2' %> gap-2">
                      <% post.quote_of_post.images.limit(4).each_with_index do |image, index| %>
                        <div class="relative <%= index >= 2 && post.quote_of_post.images.count > 4 ? 'hidden' : '' %>">
                          <%= image_tag image, 
                              class: "w-full h-32 object-cover rounded-xl border border-gray-700 cursor-pointer",
                              alt: "Quoted post image #{index + 1}",
                              data: { action: "click->image-viewer#openViewer", image_url: url_for(image), image_viewer_target: "image" } %>
                          <% if index == 3 && post.quote_of_post.images.count > 4 %>
                            <div class="absolute inset-0 bg-black bg-opacity-60 flex items-center justify-center rounded-xl">
                              <span class="text-white text-xl font-bold">+<%= post.quote_of_post.images.count - 4 %></span>
                            </div>
                          <% end %>
                        </div>
                      <% end %>
                    </div>
                  <% end %>
                </div>
              <% end %>
              <p class="text-sm text-gray-500 mt-2"><%= "@#{post.quote_of_post.user.username}" %></p>
            </div>
          </div>
          <% # For quote posts, target is the post itself %>
        <% elsif post.in_reply_to_post_id.present? %>
          <!-- Reply indicator at the top -->
    <div class="text-gray-400 mb-2 text-sm flex items-center pl-12 relative z-10">
      <span class="mr-1">‚Ü©Ô∏è</span> Replying to <%= link_to "@#{post.in_reply_to_post.user.username}", user_profile_path(post.in_reply_to_post.user.username), class: "text-blue-400 hover:text-blue-300", data: { turbo_frame: "_top" } %>
    </div>
          <%= link_to smart_post_path(post), class: "block", data: { turbo_frame: "_top", turbo_prefetch: false } do %>
            <div class="text-white mb-3 hover:text-gray-300 transition-colors relative z-10 break-words" style="word-break: break-all; overflow-wrap: break-word; hyphens: auto;">
              <%= embed_videos(post.text) %>
            </div>
          <% end %>
          <% # For reply posts, target is the post itself %>
        <% else %>
          <!-- Regular Post -->
          <div class="text-white hover:text-gray-300 transition-colors text-[15px] leading-5 relative z-10 break-words" style="word-break: break-all; overflow-wrap: break-word; hyphens: auto;">
            <%= embed_videos(post.text) %>
          </div>
          <% # For regular posts, target is the post itself %>
        <% end %>

        <% if post.images.attached? %>
          <div class="mt-3">
            <% if post.images.count == 1 %>
              <%= image_tag post.images.first, 
                  class: "max-w-full h-auto rounded-2xl border border-gray-700 cursor-pointer",
                  style: "max-height: 500px; object-fit: cover;",
                  alt: "Post image",
                  data: { action: "click->image-viewer#openViewer", image_url: url_for(post.images.first), image_viewer_target: "image" } %>
            <% else %>
              <div class="grid <%= post.images.count == 2 ? 'grid-cols-2' : 'grid-cols-2' %> gap-2">
                <% post.images.limit(4).each_with_index do |image, index| %>
                  <div class="relative <%= index >= 2 && post.images.count > 4 ? 'hidden' : '' %>">
                    <%= image_tag image, 
                        class: "w-full h-64 object-cover rounded-xl border border-gray-700 cursor-pointer",
                        alt: "Post image #{index + 1}",
                        data: { action: "click->image-viewer#openViewer", image_url: url_for(image), image_viewer_target: "image" } %>
                    <% if index == 3 && post.images.count > 4 %>
                      <div class="absolute inset-0 bg-black bg-opacity-60 flex items-center justify-center rounded-xl">
                        <span class="text-white text-xl font-bold">+<%= post.images.count - 4 %></span>
                      </div>
                    <% end %>
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>

    </div>
  </div>

<!-- Post Actions -->
<div class="flex items-center justify-start text-base text-gray-500 pt-3 mt-3 ml-15 relative z-10">
      <!-- Reply -->
      <button type="button" class="hover:text-[#81b71a] transition-colors flex items-center group"
              title="Reply" onclick="event.stopPropagation(); window.location.href='<%= smart_post_path(target_post) %>#reply_form';">>
        <div class="p-3">
          <svg class="w-6 h-6 text-gray-300 group-hover:text-[#81b71a] transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
          </svg>
        </div>
        <span class="group-hover:text-[#81b71a] ml-1"><%= target_post.replies_count %></span>
      </button>
    
        <!-- Repost Dropdown -->
        <div class="relative inline-block text-left">
          <% if Current.user.can_perform_action?('repost') || Current.user.can_perform_action?('quote') %>
            <button type="button" onclick="event.stopPropagation(); toggleDropdown('repost-dropdown-<%= target_post.id %>')" 
                    class="hover:text-[#81b71a] transition-colors flex items-center group #{'text-[#81b71a]' if target_post.reposted_by?(Current.user)}" 
                    title="Repost">
              <div class="p-3">
                <svg class="w-6 h-6 #{'text-[#81b71a]' if target_post.reposted_by?(Current.user)} #{target_post.reposted_by?(Current.user) ? '' : 'text-gray-300 group-hover:text-[#81b71a]'} transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
                </svg>
              </div>
              <span class="group-hover:text-[#81b71a] ml-1"><%= target_post.reposts_count %></span>
            </button>
            
            <!-- Dropdown Menu -->
            <div id="repost-dropdown-<%= target_post.id %>" class="hidden absolute bottom-full left-0 mb-2 w-56 bg-gray-900 rounded-xl shadow-2xl border border-gray-700 z-50">
              <div class="py-1">
                <% if Current.user.can_perform_action?('repost') %>
                  <%= link_to smart_repost_post_path(target_post), method: :post,
                      data: { turbo_method: :post, turbo_stream: true, turbo_confirm: target_post.reposted_by?(Current.user) ? "Remove your repost?" : "Repost this to your followers?" },
                      class: "block px-4 py-3 text-sm text-white hover:bg-gray-800 flex items-center transition-colors rounded-lg mx-1" do %>
                    <svg class="w-4 h-4 mr-3 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
                    </svg>
                    <%= target_post.reposted_by?(Current.user) ? "Remove repost" : "Repost" %>
                  <% end %>
                <% end %>
                
                <% if Current.user.can_perform_action?('quote') %>
                  <%= link_to smart_quote_post_path(target_post),
                      class: "block px-4 py-3 text-sm text-white hover:bg-gray-800 flex items-center transition-colors rounded-lg mx-1",
                      data: { turbo_frame: "quote_modal" } do %>
                    <svg class="w-4 h-4 mr-3 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
                    </svg>
                    Quote
                  <% end %>
                <% end %>
                
                <% if target_post.quotes_only_count > 0 %>
                   <%= link_to smart_quotes_post_path(target_post),
                       class: "block px-4 py-3 text-sm text-white hover:bg-gray-800 flex items-center transition-colors rounded-lg mx-1",
                       data: { turbo_frame: "posts_feed" } do %>
                     <svg class="w-4 h-4 mr-3 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                       <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
