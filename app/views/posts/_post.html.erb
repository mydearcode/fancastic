<!-- Determine target post for interactions -->
<% target_post = post.repost_of_post_id.present? && post.text.blank? ? post.repost_of_post : post %>

<div id="post_<%= post.id %>" class="bg-black border-b border-gray-800 py-3 hover:bg-gray-950 transition-colors cursor-pointer relative">
  
  <% if post.repost_of_post_id.present? && post.text.blank? %>
    <!-- Repost indicator at the top -->
    <div class="text-gray-400 mb-2 text-sm flex items-center pl-12 relative z-10">
      <span class="mr-1">üîÑ</span> 
      <%= link_to post.user.username, user_profile_path(post.user), class: "text-blue-400 hover:text-blue-300", data: { turbo_frame: "_top" } %>
      <% if post.user.team.present? %>
        <span class="px-2 py-0.5 text-xs font-medium rounded mx-1" style="background-color: <%= post.user.team.color_primary %>; color: <%= post.user.team.color_secondary %>;">
          <%= post.user.team.symbol_slug.upcase %>
        </span>
      <% end %>
      Reposted
    </div>
  <% end %>
  
  <!-- Post Header -->
  <div class="flex items-start space-x-3">
    <div class="w-12 h-12 rounded-full flex items-center justify-center text-white font-bold text-lg flex-shrink-0 relative z-10 overflow-hidden">
      <%= link_to user_profile_path(target_post.user), class: "absolute inset-0 flex items-center justify-center", data: { turbo_frame: "_top" } do %>
        <% if target_post.user.profile_picture.attached? %>
          <%= image_tag target_post.user.profile_picture, class: "w-full h-full object-cover" %>
        <% else %>
          <div class="w-full h-full bg-gradient-to-r from-blue-500 to-purple-600 flex items-center justify-center">
            <%= target_post.user.username.first.upcase %>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="flex-1 min-w-0">
      <div class="flex items-center justify-between mb-1 relative z-10">
        <div class="flex items-center space-x-2">
          <span class="font-bold text-white"><%= link_to target_post.user.username, user_profile_path(target_post.user), class: "text-white hover:text-gray-300", data: { turbo_frame: "_top" } %></span>
          <% if target_post.user.team.present? %>
            <span class="px-2 py-0.5 text-xs font-medium rounded" style="background-color: <%= target_post.user.team.color_primary %>; color: <%= target_post.user.team.color_secondary %>;">
              <%= target_post.user.team.symbol_slug.upcase %>
            </span>
          <% end %>
          <span class="text-gray-500 font-normal"><%= link_to "@#{target_post.user.username}", user_profile_path(target_post.user), class: "text-gray-500 hover:text-gray-400", data: { turbo_frame: "_top" } %></span>
          <span class="text-gray-500">¬∑</span>
          <span class="text-gray-500 text-sm"><%= time_ago_in_words(target_post.created_at) %></span>
          <% if target_post.visibility != 'everyone' %>
            <span class="px-2 py-0.5 text-xs bg-gray-800 text-gray-300 rounded-full">
              <%= target_post.visibility.humanize %>
            </span>
          <% end %>
        </div>
        
        <!-- Post Options Dropdown -->
        <% if post.user == Current.user %>
          <div class="relative inline-block text-left">
            <button type="button" onclick="event.stopPropagation(); toggleDropdown('post-options-<%= post.id %>')" 
                    class="text-gray-500 hover:text-white transition-colors p-1 rounded-full hover:bg-gray-800">
              <span class="text-lg">‚ãØ</span>
            </button>
            
            <!-- Dropdown Menu -->
            <div id="post-options-<%= post.id %>" class="hidden absolute right-0 mt-2 w-48 bg-gray-900 rounded-xl shadow-2xl border border-gray-700 z-50">
              <div class="py-1">
                <%= link_to post_path(post), 
                    data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this post?", turbo_stream: true },
                    class: "block px-4 py-2 text-sm text-white hover:bg-gray-800 flex items-center transition-colors" do %>
                  <span class="mr-3 text-lg">üóëÔ∏è</span>
                  Delete
                <% end %>
                
                <!-- Placeholder for future "Pin to profile" option -->
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Post Content -->
      <div class="mt-1">
        <% if post.repost_of_post_id.present? && post.text.blank? %>
          <!-- Pure Repost -->
          <div class="pl-0 ml-0">
            <% if post.repost_of_post.in_reply_to_post_id.present? %>
              <!-- Reposted Reply Post -->
              <div class="text-gray-400 mb-2 text-sm flex items-center relative z-10">
                <span class="mr-1">‚Ü©Ô∏è</span> Replying to <%= link_to "@#{post.repost_of_post.in_reply_to_post.user.username}", user_profile_path(post.repost_of_post.in_reply_to_post.user), class: "text-blue-400 hover:text-blue-300", data: { turbo_frame: "_top" } %>
              </div>
              <p class="text-white"><%= post.repost_of_post.text %></p>
              <% if post.repost_of_post.image.attached? %>
                <div class="mt-3">
                  <%= image_tag post.repost_of_post.image, 
                      class: "max-w-full h-auto rounded-2xl border border-gray-700",
                      style: "max-height: 400px; object-fit: cover;",
                      alt: "Reposted image" %>
                </div>
              <% end %>
            <% elsif post.repost_of_post.quote_of_post_id.present? %>
              <!-- Reposted Quote Post -->
              <p class="text-white mb-3"><%= post.repost_of_post.text %></p>
              <div class="border border-gray-700 rounded-xl p-3 bg-gray-900">
                <p class="text-gray-300"><%= post.repost_of_post.quote_of_post.text %></p>
                <% if post.repost_of_post.quote_of_post.image.attached? %>
                  <div class="mt-3">
                    <%= image_tag post.repost_of_post.quote_of_post.image, 
                        class: "max-w-full h-auto rounded-2xl border border-gray-700",
                        style: "max-height: 300px; object-fit: cover;",
                        alt: "Quoted post image" %>
                  </div>
                <% end %>
                <p class="text-sm text-gray-500 mt-2"><%= link_to "@#{post.repost_of_post.quote_of_post.user.username}", user_profile_path(post.repost_of_post.quote_of_post.user), class: "text-blue-400 hover:text-blue-300" %></p>
              </div>
            <% else %>
              <!-- Regular Repost -->
              <p class="text-white"><%= post.repost_of_post.text %></p>
              <% if post.repost_of_post.image.attached? %>
                <div class="mt-3">
                  <%= image_tag post.repost_of_post.image, 
                      class: "max-w-full h-auto rounded-2xl border border-gray-700",
                      style: "max-height: 400px; object-fit: cover;",
                      alt: "Reposted image" %>
                </div>
              <% end %>
            <% end %>
          </div>
        <% elsif post.quote_of_post_id.present? %>
          <!-- Quote Post -->
          <div class="relative z-10">
            <%= link_to post_path(post), class: "block", data: { turbo_frame: "_top" } do %>
              <p class="text-white mb-3 hover:text-gray-300 transition-colors"><%= post.text %></p>
            <% end %>
          </div>
          <div class="border border-gray-700 rounded-xl p-3 bg-gray-900 relative z-10">
            <%= link_to post_path(post.quote_of_post), class: "block", data: { turbo_frame: "_top" } do %>
              <p class="text-gray-300 hover:text-white transition-colors"><%= post.quote_of_post.text %></p>
              <% if post.quote_of_post.image.attached? %>
                <div class="mt-3">
                  <%= image_tag post.quote_of_post.image, 
                      class: "max-w-full h-auto rounded-2xl border border-gray-700",
                      style: "max-height: 300px; object-fit: cover;",
                      alt: "Quoted post image" %>
                </div>
              <% end %>
              <p class="text-sm text-gray-500 mt-2"><%= "@#{post.quote_of_post.user.username}" %></p>
            <% end %>
          </div>
          <% # For quote posts, target is the post itself %>
        <% elsif post.in_reply_to_post_id.present? %>
          <!-- Reply indicator at the top -->
    <div class="text-gray-400 mb-2 text-sm flex items-center pl-12 relative z-10">
      <span class="mr-1">‚Ü©Ô∏è</span> Replying to <%= link_to "@#{post.in_reply_to_post.user.username}", user_profile_path(post.in_reply_to_post.user), class: "text-blue-400 hover:text-blue-300", data: { turbo_frame: "_top" } %>
    </div>
          <%= link_to post_path(post), class: "block", data: { turbo_frame: "_top" } do %>
            <p class="text-white hover:text-gray-300 transition-colors"><%= post.text %></p>
          <% end %>
          <% # For reply posts, target is the post itself %>
        <% else %>
          <!-- Regular Post -->
          <p class="text-white hover:text-gray-300 transition-colors text-[15px] leading-5"><%= post.text %></p>
          <% # For regular posts, target is the post itself %>
        <% end %>

        <% if post.image.attached? %>
          <div class="mt-3">
            <%= image_tag post.image, 
                class: "max-w-full h-auto rounded-2xl border border-gray-700",
                style: "max-height: 500px; object-fit: cover;",
                alt: "Post image" %>
          </div>
        <% end %>
      </div>

    </div>
  </div>

<!-- Post Actions -->
<div class="flex items-center justify-start text-sm text-gray-500 pt-3 mt-3 ml-15 relative z-10">
      <!-- Reply -->
      <button type="button" class="hover:text-blue-400 transition-colors flex items-center space-x-2 group"
              title="Reply" onclick="event.stopPropagation(); window.location.href='<%= post_path(target_post) %>#reply_form';">
        <div class="p-2 rounded-full group-hover:bg-blue-900 group-hover:bg-opacity-20 transition-colors">
          <span class="text-lg">üí¨</span>
        </div>
        <span class="group-hover:text-blue-400"><%= target_post.replies_count %></span>
      </button>
    
        <!-- Repost Dropdown -->
        <div class="relative inline-block text-left">
          <% if Current.user.can_perform_action?('repost') || Current.user.can_perform_action?('quote') %>
            <button type="button" onclick="event.stopPropagation(); toggleDropdown('repost-dropdown-<%= target_post.id %>')" 
                    class="hover:text-green-400 transition-colors flex items-center space-x-2 group #{'text-green-400' if target_post.reposted_by?(Current.user)}" 
                    title="Repost">
              <div class="p-2 rounded-full group-hover:bg-green-900 group-hover:bg-opacity-20 transition-colors">
                <span class="text-lg">üîÑ</span>
              </div>
              <span class="group-hover:text-green-400"><%= target_post.reposts_count %></span>
            </button>
            
            <!-- Dropdown Menu -->
            <div id="repost-dropdown-<%= target_post.id %>" class="hidden absolute bottom-full left-0 mb-2 w-48 bg-gray-900 rounded-xl shadow-2xl border border-gray-700 z-50">
              <div class="py-2">
                <% if Current.user.can_perform_action?('repost') %>
                  <%= link_to repost_post_path(target_post), method: :post,
                      data: { turbo_method: :post, turbo_stream: true, turbo_confirm: target_post.reposted_by?(Current.user) ? "Remove your repost?" : "Repost this to your followers?" },
                      class: "block px-4 py-3 text-sm text-white hover:bg-gray-800 flex items-center transition-colors" do %>
                    <span class="mr-3 text-lg">üîÑ</span>
                    <%= target_post.reposted_by?(Current.user) ? "Remove repost" : "Repost" %>
                  <% end %>
                <% end %>
                
                <% if Current.user.can_perform_action?('quote') %>
                  <%= link_to quote_post_path(target_post),
                      class: "block px-4 py-3 text-sm text-white hover:bg-gray-800 flex items-center transition-colors",
                      data: { turbo_frame: "quote_modal" } do %>
                    <span class="mr-3 text-lg">üí≠</span>
                    Quote
                  <% end %>
                <% end %>
                
                <% if target_post.quotes_only_count > 0 %>
                   <%= link_to quotes_post_path(target_post),
                       class: "block px-4 py-3 text-sm text-white hover:bg-gray-800 flex items-center transition-colors" do %>
                     <span class="mr-3 text-lg">üëÅÔ∏è</span>
                     View quotes (<%= target_post.quotes_only_count %>)
                   <% end %>
                 <% end %>
              </div>
            </div>
          <% else %>
            <span class="text-gray-600 cursor-not-allowed flex items-center space-x-2" title="Not enough energy">
              <div class="p-2 rounded-full">
                <span class="text-lg">üîÑ</span>
              </div>
              <span><%= target_post.reposts_count %></span>
            </span>
          <% end %>
        </div>
    
        <!-- Like -->
        <% if Current.user.can_perform_action?('like') %>
          <%= button_to like_post_path(target_post), 
              method: :post,
              class: "hover:text-red-400 transition-colors flex items-center space-x-2 group #{'text-red-400' if target_post.liked_by?(Current.user)} bg-transparent border-0 p-0",
              title: target_post.liked_by?(Current.user) ? "Unlike" : "Like", 
              onclick: "event.stopPropagation();",
              form: { style: "display: inline;", data: { turbo_stream: true } } do %>
            <div class="p-2 rounded-full group-hover:bg-red-900 group-hover:bg-opacity-20 transition-colors">
              <span class="text-lg"><%= target_post.liked_by?(Current.user) ? '‚ù§Ô∏è' : 'ü§ç' %></span>
            </div>
            <span class="group-hover:text-red-400"><%= target_post.likes_count %></span>
          <% end %>
        <% else %>
          <span class="text-gray-600 cursor-not-allowed flex items-center space-x-2" title="Not enough energy to like">
            <div class="p-2 rounded-full">
              <span class="text-lg">ü§ç</span>
            </div>
            <span><%= target_post.likes_count %></span>
          </span>
        <% end %>
</div>

<%= link_to "", post_path(target_post), class: "absolute inset-0 z-0", data: { turbo_frame: "_top" } %>
</div> <!-- Closing the main post div -->