<div class="space-y-4 py-4">
  <% 3.times do %>
    <div class="animate-pulse bg-black border border-gray-800 rounded-xl p-4">
      <div class="flex items-center space-x-4">
        <div class="rounded-full bg-gray-700 h-10 w-10"></div>
        <div class="flex-1 space-y-2">
          <div class="h-3 bg-gray-700 rounded w-3/4"></div>
          <div class="h-2 bg-gray-700 rounded w-1/2"></div>
        </div>
      </div>
      <div class="mt-4 space-y-2">
        <div class="h-2 bg-gray-700 rounded"></div>
        <div class="h-2 bg-gray-700 rounded w-5/6"></div>
      </div>
    </div>
  <% end %>
</div>