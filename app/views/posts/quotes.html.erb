<div class="max-w-2xl mx-auto mt-8">
  <!-- Header -->
  <div class="bg-white rounded-lg shadow-md p-6 mb-6">
    <div class="flex items-center mb-4">
      <%= link_to root_path, class: "text-blue-600 hover:text-blue-800 mr-4" do %>
        <i class="fas fa-arrow-left"></i> Back
      <% end %>
      <h1 class="text-2xl font-bold text-gray-900">Quotes</h1>
    </div>
    
    <!-- Original Post -->
    <div class="border-l-4 border-blue-500 pl-4 bg-gray-50 rounded-r-lg p-4">
      <div class="flex items-center mb-2">
        <div class="w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center text-white font-bold mr-2">
          <%= @post.user.username.first.upcase %>
        </div>
        <span class="font-semibold text-gray-900">@<%= @post.user.username %></span>
        <span class="text-sm text-gray-500 ml-2"><%= time_ago_in_words(@post.created_at) %> ago</span>
      </div>
      <p class="text-gray-700"><%= @post.text %></p>
      <div class="mt-3 text-sm text-gray-500">
        <span class="mr-4"><%= @post.quotes_only_count %> quotes</span>
        <span class="mr-4"><%= @post.reposts_count %> reposts</span>
        <span><%= @post.likes_count %> likes</span>
      </div>
    </div>
  </div>

  <!-- Quotes List -->
  <div class="space-y-4">
    <% if @quotes.any? %>
      <% @quotes.each do |quote| %>
        <%= render 'post', post: quote %>
      <% end %>
    <% else %>
      <div class="bg-white rounded-lg shadow-md p-8 text-center">
        <h3 class="text-xl font-medium text-gray-900 mb-2">No quotes yet</h3>
        <p class="text-gray-500 mb-4">Be the first to quote this post!</p>
        <% if Current.user.can_perform_action?('quote') %>
          <%= link_to quote_post_path(@post), 
              class: "bg-blue-500 hover:bg-blue-600 text-white px-6 py-2 rounded-lg font-medium transition-colors",
              data: { turbo_frame: "quote_modal" } do %>
            ðŸ’­ Quote this post
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>