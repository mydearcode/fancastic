<%= turbo_frame_tag "posts_feed", target: "_top" do %>
<div class="max-w-2xl mx-auto mt-8">
  <!-- Header -->
  <div class="bg-black border border-gray-800 rounded-lg p-6 mb-6">
    <div class="flex items-center mb-4">
      <%= link_to root_path, class: "text-blue-500 hover:text-blue-400 mr-4" do %>
        <i class="fas fa-arrow-left"></i> Back
      <% end %>
      <h1 class="text-2xl font-bold text-white">Quotes</h1>
    </div>
    
    <!-- Original Post -->
    <div class="border-l-4 border-blue-500 pl-4 bg-gray-900 rounded-r-lg p-4">
      <div class="flex items-center mb-2">
        <%= link_to user_profile_path(@post.user.username), class: "w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center text-white font-bold mr-2", data: { turbo_frame: "_top" } do %>
          <% if @post.user.profile_picture.attached? %>
            <%= image_tag @post.user.profile_picture, class: "w-full h-full object-cover rounded-full" %>
          <% else %>
            <%= @post.user.username.first.upcase %>
          <% end %>
        <% end %>
        <%= link_to user_profile_path(@post.user.username), data: { turbo_frame: "_top" }, class: "font-semibold text-white hover:underline" do %>
          @<%= @post.user.username %>
        <% end %>
        <span class="text-sm text-gray-400 ml-2"><%= time_ago_in_words(@post.created_at) %> ago</span>
      </div>
      <%= link_to post_path(@post), data: { turbo_frame: "_top" }, class: "block" do %>
        <p class="text-gray-300 hover:text-white"><%= @post.text %></p>
      <% end %>
      <div class="mt-3 text-sm text-gray-400">
        <span class="mr-4"><%= @post.quotes_only_count %> quotes</span>
        <span class="mr-4"><%= @post.reposts_count %> reposts</span>
        <span><%= @post.likes_count %> likes</span>
      </div>
    </div>
  </div>

  <!-- Quotes List -->
  <div class="space-y-4">
    <% if @quotes.any? %>
      <% @quotes.each do |quote| %>
        <%= render 'post', post: quote %>
      <% end %>
    <% else %>
      <div class="bg-black border border-gray-800 rounded-lg p-8 text-center">
        <h3 class="text-xl font-medium text-white mb-2">No quotes yet</h3>
        <p class="text-gray-400 mb-4">Be the first to quote this post!</p>
        <% if Current.user.can_perform_action?('quote') %>
          <%= link_to quote_post_path(@post), 
              class: "bg-blue-500 hover:bg-blue-600 text-white px-6 py-2 rounded-lg font-medium transition-colors",
              data: { turbo_frame: "quote_modal" } do %>
            ðŸ’­ Quote this post
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
<% end %>