<%= turbo_frame_tag "post_form" do %>
  <div class="bg-black border border-gray-800 rounded-xl mb-6">
    <div class="flex items-center mb-4">
      <div class="w-12 h-12 rounded-full overflow-hidden mr-4">
        <% if Current.user&.profile_picture&.attached? %>
          <%= image_tag Current.user.profile_picture, class: "w-full h-full object-cover" %>
        <% else %>
          <div class="w-full bg-gradient-to-r from-blue-500 to-purple-600 flex items-center justify-center text-white font-bold h-full">
            <%= Current.user&.username&.first&.upcase || '?' %>
          </div>
        <% end %>
      </div>
      <div>
        <h3 class="font-semibold text-white">@<%= Current.user&.username || 'guest' %></h3>
        <div class="flex items-center text-sm text-gray-400">
          <span class="mr-2">⚡ <%= Current.user&.energy || 0 %></span>
          <div class="w-20 h-2 bg-gray-800 rounded-full overflow-hidden">
            <div class="h-full bg-gradient-to-r from-yellow-400 to-orange-500 transition-all duration-300" 
                 style="width: <%= Current.user ? [Current.user.energy, 100].min : 0 %>%"></div>
          </div>
        </div>
      </div>
    </div>
    
    <%= form_with model: post, local: false, data: { turbo_frame: "post_form", controller: "modal-form mention", action: "turbo:submit-end->modal-form#closeModal" } do |form| %>
      <% if post.errors.any? %>
        <div class="mb-4 p-4 bg-red-900 border border-red-700 rounded-lg">
          <h4 class="text-red-300 font-medium mb-2">Please fix the following errors:</h4>
          <ul class="text-red-300 text-sm">
            <% post.errors.full_messages.each do |message| %>
              <li>• <%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      
      <div class="mb-4 relative">
        <%= form.text_area :text, 
            placeholder: "What's happening?", 
            class: "w-full p-4 bg-black border border-gray-800 rounded-xl resize-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-white placeholder-gray-500 text-xl",
            rows: 3,
            data: { mention_target: "textarea" } %>
        
        <!-- Mention önerileri için container -->
        <div data-mention-target="suggestions" class="hidden"></div>
        
        <!-- Image preview container -->
        <div class="image-preview-container mt-3 hidden"></div>
      </div>
      
      <!-- Hidden file input -->
      <div class="hidden">
        <%= form.file_field :images, 
            id: "post_images_input",
            accept: "image/*",
            multiple: true %>
      </div>
      
      <div class="flex justify-between items-center">
        <div class="flex items-center space-x-1">
          <!-- Image upload icon -->
          <button type="button" 
                  onclick="document.getElementById('post_images_input').click()" 
                  class="p-2 text-blue-400 hover:bg-blue-900 hover:bg-opacity-20 rounded-full transition-colors"
                  title="Add photos">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd" />
            </svg>
          </button>
          
          <!-- GIF icon -->
          <button type="button" 
                  class="p-2 text-blue-400 hover:bg-blue-900 hover:bg-opacity-20 rounded-full transition-colors"
                  title="Add GIF">
            <span class="text-sm font-bold">GIF</span>
          </button>
          
          <!-- Emoji icon -->
          <button type="button" 
                  class="p-2 text-blue-400 hover:bg-blue-900 hover:bg-opacity-20 rounded-full transition-colors"
                  title="Add emoji">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM7 9a1 1 0 100-2 1 1 0 000 2zm7-1a1 1 0 11-2 0 1 1 0 012 0zm-.464 5.535a1 1 0 10-1.415-1.414 3 3 0 01-4.242 0 1 1 0 00-1.415 1.414 5 5 0 007.072 0z" clip-rule="evenodd" />
            </svg>
          </button>
          
          <!-- Location icon -->
          <button type="button" 
                  class="p-2 text-blue-400 hover:bg-blue-900 hover:bg-opacity-20 rounded-full transition-colors"
                  title="Add location">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
            </svg>
          </button>
          
          <%= form.select :visibility, 
              options_for_select([['🌍 Everyone', 'everyone'], ['👥 Followers', 'followers'], ['🔒 Only Me', 'only_me']], post.visibility),
              {}, 
              { class: "px-4 py-2 bg-black border border-gray-800 rounded-full text-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-gray-300" } %>
        </div>
        
        <%= form.submit "Post", 
            class: "px-8 py-2 bg-blue-600 text-white rounded-full hover:bg-blue-700 focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:ring-offset-black transition-colors font-semibold disabled:opacity-50" %>
      </div>
    <% end %>
  </div>
<% end %>