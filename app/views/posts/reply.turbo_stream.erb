<%= turbo_stream.prepend "replies" do %>
  <%= render 'post', post: @reply_post %>
<% end %>

<%= turbo_stream.replace "reply_form" do %>
  <%= render 'reply_form', post: @post, reply_post: Post.new(visibility: 'everyone') %>
<% end %>

<%= turbo_stream.replace "flash" do %>
  <%= render 'shared/flash', notice: "Reply posted successfully!" %>
<% end %>