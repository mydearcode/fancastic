<div class="max-w-2xl mx-auto mt-8 p-6 bg-white rounded-lg shadow-lg">
  <div class="mb-6">
    <h2 class="text-2xl font-bold text-gray-900 mb-4">Reply to Post</h2>
    
    <!-- Original Post Preview -->
      <% if @post && @post.user %>
        <div class="bg-gray-50 border border-gray-200 rounded-lg p-4 mb-6">
          <div class="flex items-center mb-3">
            <div class="w-10 h-10 bg-blue-500 rounded-full flex items-center justify-center text-white font-semibold">
              <%= @post.user.username.first.upcase %>
            </div>
            <div class="ml-3">
              <p class="font-semibold text-gray-900">@<%= @post.user.username %></p>
              <p class="text-sm text-gray-500"><%= time_ago_in_words(@post.created_at) %> ago</p>
            </div>
          </div>
          <p class="text-gray-700"><%= @post.text %></p>
        </div>
      <% end %>
    
    <!-- Reply Form -->
    <%= form_with model: [@post, @reply_post], url: reply_post_path(@post), method: :post, local: true, class: "space-y-4" do |form| %>
      <% if @reply_post.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-md p-4">
          <div class="flex">
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">Please fix the following errors:</h3>
              <div class="mt-2 text-sm text-red-700">
                <ul class="list-disc pl-5 space-y-1">
                  <% @reply_post.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      
      <div>
        <%= form.label :text, "Your Reply", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_area :text, 
            placeholder: "What's your reply?", 
            rows: 4,
            class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
      </div>
      
      <div class="flex justify-between items-center">
        <div class="flex space-x-4">
          <%= form.select :visibility, 
              options_for_select(Post.visibilities.map { |key, value| [key.humanize, key] }, 'everyone'),
              { prompt: "Visibility" },
              { class: "px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500" } %>
        </div>
        
        <div class="flex space-x-3">
          <%= link_to "Cancel", root_path, class: "bg-gray-300 hover:bg-gray-400 text-gray-700 px-6 py-2 rounded-lg font-medium transition-colors" %>
          <%= form.submit "Reply (-3 Energy)", class: "bg-blue-500 hover:bg-blue-600 text-white px-6 py-2 rounded-lg font-medium transition-colors" %>
        </div>
      </div>
    <% end %>
  </div>
</div>