<div class="max-w-2xl mx-auto py-6">
  <div class="sm:flex sm:items-center sm:justify-between mb-6">
    <div>
      <h1 class="text-2xl font-bold text-white">Blocked Users</h1>
      <p class="mt-2 text-sm text-gray-400">Users you have blocked</p>
    </div>
  </div>

  <% if @blocked_users.any? %>
    <div class="space-y-1">
      <% @blocked_users.each do |user| %>
        <div id="blocked_user_<%= user.id %>" class="bg-black border border-gray-800 rounded-xl p-4 hover:bg-gray-950 transition-colors">
          <div class="flex items-center justify-between">
            <div class="flex items-center space-x-3">
              <!-- Profile Picture -->
              <div class="w-12 h-12 rounded-full flex items-center justify-center text-white font-bold text-lg flex-shrink-0 overflow-hidden">
                <% if user.profile_picture.attached? %>
                  <%= image_tag url_for(user.profile_picture), class: "w-full h-full object-cover" %>
                <% else %>
                  <div class="w-full h-full bg-indigo-500 flex items-center justify-center">
                    <%= user.username.first.upcase %>
                  </div>
                <% end %>
              </div>
              
              <!-- User Info -->
              <div>
                <div class="flex items-center space-x-2">
                  <h3 class="text-white font-semibold"><%= user.username %></h3>
                  <% if user.team.present? %>
                    <span class="px-2 py-0.5 text-xs font-medium rounded" style="background-color: <%= user.team.color_primary %>; color: <%= user.team.color_secondary %>;">
                      <%= user.team.symbol_slug.upcase %>
                    </span>
                  <% end %>
                </div>
                <p class="text-sm text-gray-400">
                  Blocked <%= time_ago_in_words(Current.user.user_blocks.find_by(blocked_id: user.id).created_at) %> ago
                </p>
              </div>
            </div>
            
            <!-- Unblock Button -->
            <div id="block_button_<%= user.id %>">
              <%= render 'shared/unblock_button', user: user %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    
    <!-- Pagination -->
    <% if @pagy.pages > 1 %>
      <div class="mt-6">
        <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
      </div>
    <% end %>
  <% else %>
    <div class="text-center py-12 bg-black border border-gray-800 rounded-xl">
      <div class="text-gray-500 text-4xl mb-4">ðŸš«</div>
      <h3 class="text-xl font-semibold text-white mb-2">No blocked users</h3>
      <p class="text-gray-400">You haven't blocked anyone yet.</p>
    </div>
  <% end %>
</div>