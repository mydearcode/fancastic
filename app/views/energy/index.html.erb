<div class="min-h-screen w-full px-4 md:px-0">
  <div class="max-w-2xl mx-auto py-8">
    <h1 class="text-2xl font-semibold mb-4">Daily Energy</h1>

    <div class="bg-gray-900 border border-gray-800 rounded-xl p-4 mb-6">
      <div class="flex items-center justify-between mb-2">
        <div>
          <div class="text-sm text-gray-400">Current Energy</div>
          <div class="text-xl font-bold"><%= Current.user.energy %>/100</div>
        </div>
        <% if @can_claim %>
          <%= button_to claim_energy_path, method: :post, class: "bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-lg font-medium" do %>
            Claim +<%= @daily_claim_amount %>
          <% end %>
        <% else %>
          <div class="text-gray-400">You already claimed today.</div>
        <% end %>
      </div>
      <div class="text-sm text-gray-500">
        <% if @last_claim_date.present? %>
          Last claimed: <%= @last_claim_date %>
        <% else %>
          Not claimed yet.
        <% end %>
      </div>
    </div>

    <h2 class="text-xl font-semibold mb-3">Recent Energy Activities</h2>
    <div class="space-y-3">
      <% @recent_activities.each do |log| %>
        <div class="bg-gray-900 border border-gray-800 rounded-xl p-3 flex items-center justify-between">
          <div>
            <div class="text-sm text-gray-300">Action: <%= log.action_type %></div>
            <div class="text-xs text-gray-500"><%= l(log.created_at, format: :short) %></div>
          </div>
          <div class="text-sm <%= log.energy_delta > 0 ? 'text-green-400' : 'text-red-400' %>">
            <%= log.energy_delta > 0 ? '+' : '' %><%= log.energy_delta %>
          </div>
        </div>
      <% end %>
      <% if @recent_activities.blank? %>
        <div class="text-gray-500">No recent activities.</div>
      <% end %>
    </div>
  </div>
</div>
