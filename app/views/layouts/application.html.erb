                  <span class="absolute -top-1 -right-1 bg-red-500 text-white text-xs rounded-full h-4 w-4 flex items-center justify-center font-bold" id="mobile-messages-badge">
                    <%= Current.user.unread_messages_count > 99 ? '99+' : Current.user.unread_messages_count %>
                  </span>
                <% end %>
              </div>
              <span class="text-xs mt-1">Messages</span>
            <% end %>
            
            <%= link_to trends_path, class: "flex flex-col items-center p-2 text-white hover:text-blue-400" do %>
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M16 6l2.29 2.29-4.88 4.88-4-4L2 16.59 3.41 18l6-6 4 4 6.3-6.29L22 12V6z"/>
              </svg>
              <span class="text-xs mt-1">Trends</span>
            <% end %>
            
