<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Fancastic" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <%# Enable PWA manifest for installable apps (make sure to enable in config/routes.rb too!) %>
    <%#= tag.link rel: "manifest", href: pwa_manifest_path(format: :json) %>

    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">

    <%# Includes all stylesheet files in app/assets/stylesheets %>
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-black text-white font-sans">
    <!-- Navigation Header -->
    <nav class="bg-black border-b border-gray-800 fixed top-0 left-0 right-0 z-50 backdrop-blur-md bg-opacity-80">
      <div class="max-w-6xl mx-auto px-4">
        <div class="flex justify-between items-center h-16">
          <!-- Logo -->
          <div class="flex items-center">
            <%= link_to root_path, class: "text-2xl font-bold text-white hover:text-blue-400 transition-colors" do %>
              ‚öΩ Fancastic
            <% end %>
          </div>

          <!-- Navigation Links -->
          <% if Current.user %>
            <div class="flex items-center space-x-8">
              <%= link_to root_path, class: "text-white hover:text-blue-400 font-medium transition-colors flex items-center space-x-2" do %>
                <span>üè†</span>
                <span class="hidden sm:inline">Home</span>
              <% end %>
              <%= link_to conversations_path, class: "text-white hover:text-blue-400 font-medium transition-colors flex items-center space-x-2" do %>
                <span>‚úâÔ∏è</span>
                <span class="hidden sm:inline">Messages</span>
              <% end %>
              <%= link_to profile_path, class: "text-white hover:text-blue-400 font-medium transition-colors flex items-center space-x-2" do %>
                <span>üë§</span>
                <span class="hidden sm:inline">Profile</span>
              <% end %>
              <button data-controller="modal" data-action="click->modal#open" data-modal-target="post-modal" class="text-white hover:text-blue-400 font-medium transition-colors flex items-center space-x-2 bg-transparent border-0 p-0 cursor-pointer">
                <span>‚úèÔ∏è</span>
                <span class="hidden sm:inline">Post</span>
              </button>
              <% if Current.user.admin? %>
                <%= link_to admin_root_path, class: "text-purple-400 hover:text-purple-300 font-medium transition-colors flex items-center space-x-2" do %>
                  <span>‚öôÔ∏è</span>
                  <span class="hidden sm:inline">Admin</span>
                <% end %>
              <% end %>
              
              <!-- User Menu -->
              <div class="flex items-center space-x-3">
                <div class="w-8 h-8 bg-gradient-to-r from-blue-500 to-purple-600 rounded-full flex items-center justify-center text-white font-bold text-sm">
                  <%= Current.user.username.first.upcase %>
                </div>
                <span class="text-gray-300 font-medium hidden md:inline">@<%= Current.user.username %></span>
                <%= link_to session_path, method: :delete, 
                    class: "text-red-400 hover:text-red-300 font-medium transition-colors" do %>
                  <span class="sm:hidden">üö™</span>
                  <span class="hidden sm:inline">Sign out</span>
                <% end %>
              </div>
            </div>
          <% else %>
            <div class="flex items-center space-x-4">
              <%= link_to "Sign in", new_session_path, class: "text-white hover:text-blue-400 font-medium transition-colors" %>
              <%= link_to "Sign up", new_registration_path, class: "bg-blue-500 hover:bg-blue-600 text-white px-6 py-2 rounded-full font-medium transition-colors" %>
            </div>
          <% end %>
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <main class="pt-20 pb-8 min-h-screen">
      <!-- Flash Messages -->
      <div id="flash" class="max-w-2xl mx-auto mb-4 px-4">
        <%= render 'shared/flash', notice: notice, alert: alert %>
      </div>

      <%= yield %>
      
      <!-- Modal Container for Turbo Frames -->
      <%= turbo_frame_tag "quote_modal" %>
      
      <!-- Post Modal -->
      <div id="post-modal" class="hidden fixed inset-0 bg-black bg-opacity-25 z-50 items-center justify-center" style="display: none;" data-controller="modal" data-action="click->modal#clickOutside">
        <div class="bg-black border border-gray-800 rounded-xl p-6 max-w-lg w-full mx-4 relative" onclick="event.stopPropagation();">
          <button data-action="modal#close" class="absolute top-4 right-4 text-gray-400 hover:text-white">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
          <h3 class="text-xl font-bold text-white mb-4">Create a Post</h3>
          <div id="post-form-container">
            <%= render 'posts/form', post: Post.new %>
          </div>
        </div>
      </div>
    </main>
    
    <script>
      function toggleDropdown(dropdownId) {
        const dropdown = document.getElementById(dropdownId);
        const allDropdowns = document.querySelectorAll('[id^="repost-dropdown-"]');
        
        // Close all other dropdowns
        allDropdowns.forEach(d => {
          if (d.id !== dropdownId) {
            d.classList.add('hidden');
          }
        });
        
        // Toggle current dropdown
        dropdown.classList.toggle('hidden');
      }
      
      // Close dropdowns when clicking outside
      document.addEventListener('click', function(event) {
        // Don't interfere with link navigation or any clickable elements
        if (event.target.closest('a') || event.target.closest('button') || event.target.closest('[onclick]')) {
          return;
        }
        
        if (!event.target.closest('.relative')) {
          const allDropdowns = document.querySelectorAll('[id^="repost-dropdown-"]');
          allDropdowns.forEach(d => d.classList.add('hidden'));
        }
      });
    </script>
  </body>
</html>
