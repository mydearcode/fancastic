<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Fancastic" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <%# Enable PWA manifest for installable apps (make sure to enable in config/routes.rb too!) %>
    <%#= tag.link rel: "manifest", href: pwa_manifest_path(format: :json) %>

    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">

    <%# Includes all stylesheet files in app/assets/stylesheets %>
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-black text-white font-sans">
    <div class="flex justify-center min-h-screen">
      <div class="flex min-h-screen max-w-7xl w-full relative">
        <!-- Left Column: Logo and Navigation (Desktop) -->
        <div class="hidden md:block w-64 fixed h-full border-r border-gray-800 bg-black z-40">
        <div class="p-4 mx-4">
          <!-- Logo -->
          <%= link_to root_path, class: "text-2xl font-bold text-white hover:text-blue-400 transition-colors block mb-8" do %>
            ‚öΩ Fancastic
          <% end %>
          
          <!-- Navigation Menu -->
          <% if Current.user %>
            <nav class="space-y-4">
              <%= link_to root_path, class: "text-white hover:text-blue-400 font-medium transition-colors flex items-center space-x-4 p-3 rounded-full hover:bg-gray-900" do %>
                <span class="text-xl">üè†</span>
                <span>Home</span>
              <% end %>
              
              <%= link_to conversations_path, class: "text-white hover:text-blue-400 font-medium transition-colors flex items-center space-x-4 p-3 rounded-full hover:bg-gray-900" do %>
                <span class="text-xl">‚úâÔ∏è</span>
                <span>Messages</span>
              <% end %>
              
              <%= link_to profile_path, class: "text-white hover:text-blue-400 font-medium transition-colors flex items-center space-x-4 p-3 rounded-full hover:bg-gray-900" do %>
                <span class="text-xl">üë§</span>
                <span>Profile</span>
              <% end %>
              
              <button data-controller="modal" data-action="click->modal#open" data-modal-target="post-modal" class="text-white hover:text-blue-400 font-medium transition-colors flex items-center space-x-4 p-3 rounded-full hover:bg-gray-900 w-full text-left">
                <span class="text-xl">‚úèÔ∏è</span>
                <span>Post</span>
              </button>
              
              <% if Current.user.admin? %>
                <%= link_to admin_root_path, class: "text-purple-400 hover:text-purple-300 font-medium transition-colors flex items-center space-x-4 p-3 rounded-full hover:bg-gray-900" do %>
                  <span class="text-xl">‚öôÔ∏è</span>
                  <span>Admin</span>
                <% end %>
              <% end %>
              
              <!-- User Profile Button -->
              <div class="mt-auto pt-4">
                <div class="flex items-center space-x-3 p-3 rounded-full hover:bg-gray-900">
                  <div class="w-10 h-10 bg-gradient-to-r from-blue-500 to-purple-600 rounded-full flex items-center justify-center text-white font-bold text-sm">
                    <%= Current.user.username.first.upcase %>
                  </div>
                  <div>
                    <div class="font-medium">@<%= Current.user.username %></div>
                    <%= button_to session_path, method: :delete, 
                        class: "text-red-400 hover:text-red-300 text-sm font-medium transition-colors bg-transparent border-0 cursor-pointer p-0" do %>
                      Sign out
                    <% end %>
                  </div>
                </div>
              </div>
            </nav>
          <% else %>
            <div class="space-y-4">
              <%= link_to "Sign in", new_session_path, class: "text-white hover:text-blue-400 font-medium transition-colors block p-3" %>
              <%= link_to "Sign up", new_registration_path, class: "bg-blue-500 hover:bg-blue-600 text-white px-6 py-3 rounded-full font-medium transition-colors block text-center" %>
            </div>
          <% end %>
        </div>
      </div>
      
      <!-- Mobile Bottom Navigation -->
      <% if Current.user %>
        <div class="md:hidden fixed bottom-0 left-0 right-0 bg-black border-t border-gray-800 z-50">
          <div class="flex justify-around items-center p-3">
            <%= link_to root_path, class: "text-white hover:text-blue-400 transition-colors p-2" do %>
              <span class="text-xl block text-center">üè†</span>
            <% end %>
            
            <%= link_to conversations_path, class: "text-white hover:text-blue-400 transition-colors p-2" do %>
              <span class="text-xl block text-center">‚úâÔ∏è</span>
            <% end %>
            
            <button data-controller="modal" data-action="click->modal#open" data-modal-target="post-modal" class="text-white hover:text-blue-400 transition-colors p-2 bg-transparent border-0">
              <span class="text-xl block text-center">‚úèÔ∏è</span>
            </button>
            
            <%= link_to profile_path, class: "text-white hover:text-blue-400 transition-colors p-2" do %>
              <span class="text-xl block text-center">üë§</span>
            <% end %>
            
            <% if Current.user.admin? %>
              <%= link_to admin_root_path, class: "text-purple-400 hover:text-purple-300 transition-colors p-2" do %>
                <span class="text-xl block text-center">‚öôÔ∏è</span>
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
      
      <!-- Middle Column: Content -->
      <div class="ml-0 md:ml-64 md:pl-4 flex-1 min-h-screen w-full md:max-w-xl mr-0 pb-24 md:pb-8">
        <!-- Flash Messages -->
        <div id="flash" class="mb-4 px-4 pt-4">
          <%= render 'shared/flash', notice: notice, alert: alert %>
        </div>
        
        <!-- Post Form (Only on home page) -->
        <% if current_page?(root_path) && Current.user %>
          <div class="border-b border-gray-800 p-4">
            <button data-controller="modal" data-action="click->modal#open" data-modal-target="post-modal" class="w-full text-left p-3 rounded-full bg-gray-900 hover:bg-gray-800 text-gray-400 transition-colors">
              What's happening?
            </button>
          </div>
        <% end %>
        
        <%= yield %>
      </div>
      
      <!-- Right Column: Search and Trends -->
      <div class="hidden lg:block w-80 min-h-screen border-l border-gray-800 ml-4">
        <div class="p-4 mx-4 sticky top-0">
          <!-- Search -->
          <div class="mb-6">
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd" />
                </svg>
              </div>
              <input type="text" placeholder="Search" class="bg-gray-900 text-white w-full pl-10 pr-4 py-2 rounded-full border border-gray-800 focus:outline-none focus:border-blue-500">
            </div>
          </div>
          
          <!-- Trends -->
          <div class="bg-gray-900 rounded-xl p-4 mb-6">
            <h2 class="text-xl font-bold mb-4">Trends for you</h2>
            <div class="space-y-4">
              <div>
                <div class="text-xs text-gray-500">Trending in Sports</div>
                <div class="font-bold">#ChampionsLeague</div>
                <div class="text-xs text-gray-500">125K posts</div>
              </div>
              <div>
                <div class="text-xs text-gray-500">Trending in Football</div>
                <div class="font-bold">#PremierLeague</div>
                <div class="text-xs text-gray-500">95K posts</div>
              </div>
              <div>
                <div class="text-xs text-gray-500">Sports ¬∑ Trending</div>
                <div class="font-bold">Manchester United</div>
                <div class="text-xs text-gray-500">85K posts</div>
              </div>
            </div>
          </div>
          
          <!-- Who to follow -->
          <div class="bg-gray-900 rounded-xl p-4">
            <h2 class="text-xl font-bold mb-4">Who to follow</h2>
            <div class="space-y-4">
              <div class="flex items-center justify-between">
                <div class="flex items-center space-x-3">
                  <div class="w-10 h-10 bg-blue-500 rounded-full flex items-center justify-center text-white font-bold">FC</div>
                  <div>
                    <div class="font-bold">Fan Club</div>
                    <div class="text-sm text-gray-500">@fanclub</div>
                  </div>
                </div>
                <button class="bg-white text-black px-4 py-1 rounded-full font-bold text-sm">Follow</button>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Modal Container for Turbo Frames -->
      <%= turbo_frame_tag "quote_modal" %>
      
      <!-- Post Modal -->
      <div id="post-modal" class="hidden fixed inset-0 bg-black bg-opacity-25 z-50 items-center justify-center" style="display: none;" data-controller="modal" data-action="click->modal#clickOutside">
        <div class="bg-black border border-gray-800 rounded-xl p-6 max-w-lg w-full mx-4 relative" onclick="event.stopPropagation();">
          <button data-action="modal#close" class="absolute top-4 right-4 text-gray-400 hover:text-white">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
          <h3 class="text-xl font-bold text-white mb-4">Create a Post</h3>
          <div id="post-form-container">
            <%= render 'posts/form', post: Post.new %>
          </div>
        </div>
      </div>
      </div>
    </div>
    
    <!-- Modal container for reports -->
    <%= turbo_frame_tag "modal" %>
    
    <script>
      function toggleDropdown(dropdownId) {
        const dropdown = document.getElementById(dropdownId);
        const allDropdowns = document.querySelectorAll('[id^="repost-dropdown-"]');
        
        // Close all other dropdowns
        allDropdowns.forEach(d => {
          if (d.id !== dropdownId) {
            d.classList.add('hidden');
          }
        });
        
        // Toggle current dropdown
        dropdown.classList.toggle('hidden');
      }
      
      // Close dropdowns when clicking outside
      document.addEventListener('click', function(event) {
        // Don't interfere with link navigation or any clickable elements
        if (event.target.closest('a') || event.target.closest('button') || event.target.closest('[onclick]')) {
          return;
        }
        
        if (!event.target.closest('.relative')) {
          const allDropdowns = document.querySelectorAll('[id^="repost-dropdown-"]');
          allDropdowns.forEach(d => d.classList.add('hidden'));
        }
      });
    </script>
  </body>
</html>
