<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Fancastic" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <%# Enable PWA manifest for installable apps (make sure to enable in config/routes.rb too!) %>
    <%#= tag.link rel: "manifest", href: pwa_manifest_path(format: :json) %>

    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">

    <%# Includes all stylesheet files in app/assets/stylesheets %>
    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-gray-50">
    <!-- Navigation Header -->
    <nav class="bg-white shadow-sm border-b border-gray-200 fixed top-0 left-0 right-0 z-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
          <!-- Logo -->
          <div class="flex items-center">
            <%= link_to root_path, class: "text-2xl font-bold text-blue-600" do %>
              âš½ Fancastic
            <% end %>
          </div>

          <!-- Navigation Links -->
          <% if Current.user %>
            <div class="flex items-center space-x-6">
              <%= link_to "Feed", root_path, class: "text-gray-700 hover:text-blue-600 font-medium" %>
              <%= link_to "Messages", conversations_path, class: "text-gray-700 hover:text-blue-600 font-medium" %>
              <%= link_to "Profile", profile_path, class: "text-gray-700 hover:text-blue-600 font-medium" %>
              <% if Current.user.admin? %>
                <%= link_to "Admin", admin_root_path, class: "text-purple-600 hover:text-purple-700 font-medium" %>
              <% end %>
              
              <!-- User Menu -->
              <div class="flex items-center space-x-3">
                <div class="w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center text-white font-bold text-sm">
                  <%= Current.user.username.first.upcase %>
                </div>
                <span class="text-gray-700 font-medium">@<%= Current.user.username %></span>
                <%= link_to "Sign out", session_path, method: :delete, 
                    class: "text-red-600 hover:text-red-700 font-medium" %>
              </div>
            </div>
          <% else %>
            <div class="flex items-center space-x-4">
              <%= link_to "Sign in", new_session_path, class: "text-gray-700 hover:text-blue-600 font-medium" %>
              <%= link_to "Sign up", new_registration_path, class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg font-medium" %>
            </div>
          <% end %>
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <main class="pt-20 pb-8">
      <!-- Flash Messages -->
      <div id="flash" class="max-w-2xl mx-auto mb-4 px-4">
        <%= render 'shared/flash', notice: notice, alert: alert %>
      </div>

      <%= yield %>
      
      <!-- Modal Container for Turbo Frames -->
      <%= turbo_frame_tag "quote_modal" %>
    </main>
    
    <script>
      function toggleDropdown(dropdownId) {
        const dropdown = document.getElementById(dropdownId);
        const allDropdowns = document.querySelectorAll('[id^="repost-dropdown-"]');
        
        // Close all other dropdowns
        allDropdowns.forEach(d => {
          if (d.id !== dropdownId) {
            d.classList.add('hidden');
          }
        });
        
        // Toggle current dropdown
        dropdown.classList.toggle('hidden');
      }
      
      // Close dropdowns when clicking outside
      document.addEventListener('click', function(event) {
        if (!event.target.closest('.relative')) {
          const allDropdowns = document.querySelectorAll('[id^="repost-dropdown-"]');
          allDropdowns.forEach(d => d.classList.add('hidden'));
        }
      });
    </script>
  </body>
</html>
