                  <path d="M10 20v-6h4v6h5v-8h3L12 3 2 12h3v8z"/>
                </svg>
                <span>Home</span>
              <% end %>
              
              <%= link_to conversations_path, class: "text-white hover:text-blue-400 font-medium transition-colors flex items-center space-x-4 p-3 rounded-full hover:bg-gray-900 relative" do %>
                <div class="relative">
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
                  </svg>
                  <!-- Messages Badge -->
                  <% if Current.user&.unread_messages_count&.> 0 %>
                    <span class="absolute -top-1 -right-1 bg-red-500 text-white text-xs rounded-full h-5 w-5 flex items-center justify-center font-bold" id="messages-badge">
                      <%= Current.user.unread_messages_count > 99 ? '99+' : Current.user.unread_messages_count %>
                    </span>
                  <% end %>
                </div>
                <span>Messages</span>
              <% end %>
              
              <%= link_to notifications_path, class: "text-white hover:text-blue-400 font-medium transition-colors flex items-center space-x-4 p-3 rounded-full hover:bg-gray-900 relative" do %>
