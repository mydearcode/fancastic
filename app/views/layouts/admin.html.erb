<!DOCTYPE html>
<html>
  <head>
    <title>Fancastic Admin</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-gray-50">
    <!-- Admin Navigation -->
    <nav class="bg-white shadow-sm border-b">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16">
          <div class="flex items-center">
            <%= link_to "Fancastic Admin", admin_root_path, class: "text-xl font-bold text-gray-900" %>
          </div>
          
          <div class="flex items-center space-x-4">
            <%= link_to "Dashboard", admin_root_path, class: "text-gray-700 hover:text-gray-900 px-3 py-2 rounded-md text-sm font-medium" %>
            <%= link_to "Countries", admin_countries_path, class: "text-gray-700 hover:text-gray-900 px-3 py-2 rounded-md text-sm font-medium" %>
            <%= link_to "Leagues", admin_leagues_path, class: "text-gray-700 hover:text-gray-900 px-3 py-2 rounded-md text-sm font-medium" %>
            <%= link_to "Teams", admin_teams_path, class: "text-gray-700 hover:text-gray-900 px-3 py-2 rounded-md text-sm font-medium" %>
            
            <div class="border-l border-gray-300 pl-4">
              <%= link_to "Back to Site", root_path, class: "text-blue-600 hover:text-blue-800 px-3 py-2 rounded-md text-sm font-medium" %>
              <%= link_to "Logout", session_path, method: :delete, class: "text-red-600 hover:text-red-800 px-3 py-2 rounded-md text-sm font-medium" %>
            </div>
          </div>
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <main class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
      <% if notice %>
        <div class="mb-4 bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded">
          <%= notice %>
        </div>
      <% end %>
      
      <% if alert %>
        <div class="mb-4 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
          <%= alert %>
        </div>
      <% end %>
      
      <%= yield %>
    </main>
  </body>
</html>